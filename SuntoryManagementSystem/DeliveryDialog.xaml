<Window x:Class="SuntoryManagementSystem.DeliveryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Levering" Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Type:" VerticalAlignment="Center"/>
        <ComboBox x:Name="cmbDeliveryType" Grid.Row="0" Grid.Column="1" Margin="0,5" SelectionChanged="cmbDeliveryType_SelectionChanged">
            <ComboBoxItem Content="Incoming" IsSelected="True" Tag="Incoming"/>
            <ComboBoxItem Content="Outgoing" Tag="Outgoing"/>
        </ComboBox>

        <Label Grid.Row="1" Grid.Column="0" Content="Referentienummer:" VerticalAlignment="Center"/>
        <TextBox x:Name="txtReferenceNumber" Grid.Row="1" Grid.Column="1" Margin="0,5"/>

        <Label x:Name="lblSupplier" Grid.Row="2" Grid.Column="0" Content="Leverancier:" VerticalAlignment="Center"/>
        <ComboBox x:Name="cmbSupplier" Grid.Row="2" Grid.Column="1" Margin="0,5" 
                  DisplayMemberPath="SupplierName" SelectedValuePath="SupplierId"/>

        <Label x:Name="lblCustomer" Grid.Row="3" Grid.Column="0" Content="Klant:" VerticalAlignment="Center" Visibility="Collapsed"/>
        <ComboBox x:Name="cmbCustomer" Grid.Row="3" Grid.Column="1" Margin="0,5" 
                  DisplayMemberPath="CustomerName" SelectedValuePath="CustomerId" Visibility="Collapsed"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Voertuig:" VerticalAlignment="Center"/>
        <ComboBox x:Name="cmbVehicle" Grid.Row="4" Grid.Column="1" Margin="0,5" 
                  DisplayMemberPath="LicensePlate" SelectedValuePath="VehicleId"/>

        <Label Grid.Row="5" Grid.Column="0" Content="Verwachte datum:" VerticalAlignment="Center"/>
        <DatePicker x:Name="dpExpectedDate" Grid.Row="5" Grid.Column="1" Margin="0,5"/>

        <Label Grid.Row="6" Grid.Column="0" Content="Opmerkingen:" VerticalAlignment="Top" Margin="0,5,0,0"/>
        <TextBox x:Name="txtNotes" Grid.Row="6" Grid.Column="1" 
                 TextWrapping="Wrap" AcceptsReturn="True" Height="60"
                 VerticalScrollBarVisibility="Auto" Margin="0,5"/>

        <!-- Items Section -->
        <GroupBox Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Header="PRODUCTEN IN LEVERING" Margin="0,10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Items DataGrid -->
                <DataGrid x:Name="dgItems" Grid.Row="0" Height="200"
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False"
                          SelectionChanged="dgItems_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Product" Binding="{Binding Product.ProductName}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Aantal" Binding="{Binding Quantity}" Width="80" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Prijs" Binding="{Binding UnitPrice, StringFormat={}{0:C2}}" Width="100" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Totaal" Binding="{Binding Total, StringFormat={}{0:C2}}" Width="100" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Add Item Controls -->
                <Border Grid.Row="1" Margin="0,10,0,0" Background="LightYellow" BorderBrush="Orange" BorderThickness="2" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox x:Name="cmbProduct" Grid.Column="0" Margin="2" 
                                  DisplayMemberPath="ProductName" SelectedValuePath="ProductId"
                                  SelectionChanged="cmbProduct_SelectionChanged"/>
                        <TextBox x:Name="txtQuantity" Grid.Column="1" Margin="2" Text="1" VerticalContentAlignment="Center"/>
                        <TextBox x:Name="txtUnitPrice" Grid.Column="2" Margin="2" Text="0.00" VerticalContentAlignment="Center"/>
                        <Button x:Name="btnAddItem" Grid.Column="3" Content="Toevoegen" Width="90" Margin="5,2" 
                                Click="btnAddItem_Click" Background="LimeGreen" FontWeight="Bold"/>
                        <Button x:Name="btnRemoveItem" Grid.Column="4" Content="Verwijderen" Width="90" Margin="5,2" 
                                Click="btnRemoveItem_Click" IsEnabled="False" Background="Salmon" FontWeight="Bold"/>
                    </Grid>
                </Border>

                <!-- Total Display -->
                <TextBlock Grid.Row="2" x:Name="txtTotal" FontWeight="Bold" FontSize="16" 
                          HorizontalAlignment="Right" Margin="0,10,0,0"/>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnCancelDelivery" Content="Levering Annuleren" Width="140" Margin="5" Click="btnCancelDelivery_Click" 
                    Background="Red" Foreground="White" FontWeight="Bold" Visibility="Collapsed"/>
            <Button x:Name="btnCancel" Content="Annuleren" Width="100" Margin="5" Click="btnCancel_Click"/>
            <Button x:Name="btnSave" Content="Opslaan" Width="100" Margin="5" Click="btnSave_Click" Background="LimeGreen" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
