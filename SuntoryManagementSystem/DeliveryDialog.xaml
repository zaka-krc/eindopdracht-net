<Window x:Class="SuntoryManagementSystem.DeliveryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Suntory - Levering" 
        Height="750" Width="950"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{StaticResource BackgroundBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="25,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Type:" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="cmbDeliveryType" Grid.Row="0" Grid.Column="1" Style="{StaticResource ComboBoxStyle}" 
                          SelectionChanged="cmbDeliveryType_SelectionChanged">
                    <ComboBoxItem Content="Incoming" IsSelected="True" Tag="Incoming"/>
                    <ComboBoxItem Content="Outgoing" Tag="Outgoing"/>
                </ComboBox>

                <Label Grid.Row="1" Grid.Column="0" Content="Referentienummer:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtReferenceNumber" Grid.Row="1" Grid.Column="1" Style="{StaticResource TextBoxStyle}"/>

                <Label x:Name="lblSupplier" Grid.Row="2" Grid.Column="0" Content="Leverancier:" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="cmbSupplier" Grid.Row="2" Grid.Column="1" Style="{StaticResource ComboBoxStyle}" 
                          DisplayMemberPath="SupplierName" SelectedValuePath="SupplierId"/>

                <Label x:Name="lblCustomer" Grid.Row="3" Grid.Column="0" Content="Klant:" Style="{StaticResource LabelStyle}" Visibility="Collapsed"/>
                <ComboBox x:Name="cmbCustomer" Grid.Row="3" Grid.Column="1" Style="{StaticResource ComboBoxStyle}" 
                          DisplayMemberPath="CustomerName" SelectedValuePath="CustomerId" Visibility="Collapsed"/>

                <Label Grid.Row="4" Grid.Column="0" Content="Voertuig:" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="cmbVehicle" Grid.Row="4" Grid.Column="1" Style="{StaticResource ComboBoxStyle}" 
                          DisplayMemberPath="LicensePlate" SelectedValuePath="VehicleId"/>

                <Label Grid.Row="5" Grid.Column="0" Content="Verwachte datum:" Style="{StaticResource LabelStyle}"/>
                <DatePicker x:Name="dpExpectedDate" Grid.Row="5" Grid.Column="1"/>

                <Label Grid.Row="6" Grid.Column="0" Content="Opmerkingen:" Style="{StaticResource LabelStyle}" VerticalAlignment="Top"/>
                <TextBox x:Name="txtNotes" Grid.Row="6" Grid.Column="1" 
                         Style="{StaticResource MultilineTextBoxStyle}"
                         MinHeight="60" MaxHeight="100"/>

                <!-- Items Section -->
                <GroupBox Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Header="PRODUCTEN IN LEVERING" 
                          Margin="0,15,0,0" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Items DataGrid -->
                        <DataGrid x:Name="dgItems" Grid.Row="0" MinHeight="200" MaxHeight="300"
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False"
                                  SelectionChanged="dgItems_SelectionChanged">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Product" Binding="{Binding Product.ProductName}" Width="*" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Aantal" Binding="{Binding Quantity}" Width="80" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Prijs/stuk" Binding="{Binding UnitPrice, StringFormat={}{0:C2}}" Width="100" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Totaal" Binding="{Binding Total, StringFormat={}{0:C2}}" Width="100" IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Add Item Controls -->
                        <Border Grid.Row="1" Margin="0,10,0,0" Background="{StaticResource InfoBackgroundBrush}" 
                                BorderBrush="{StaticResource PrimaryBrush}" BorderThickness="2" Padding="12" CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <ComboBox x:Name="cmbProduct" Grid.Column="0" Margin="2" 
                                          DisplayMemberPath="ProductName" SelectedValuePath="ProductId"
                                          SelectionChanged="cmbProduct_SelectionChanged"
                                          Style="{StaticResource ComboBoxStyle}"/>
                                <TextBox x:Name="txtQuantity" Grid.Column="1" Margin="2" Text="1" 
                                         VerticalContentAlignment="Center" Style="{StaticResource TextBoxStyle}"/>
                                <TextBox x:Name="txtUnitPrice" Grid.Column="2" Margin="2" Text="0.00" 
                                         VerticalContentAlignment="Center" Style="{StaticResource TextBoxStyle}"/>
                                <Button x:Name="btnAddItem" Grid.Column="3" Content="Toevoegen" Width="100" Margin="5,2" 
                                        Click="btnAddItem_Click" Style="{StaticResource SuccessButtonStyle}"/>
                                <Button x:Name="btnRemoveItem" Grid.Column="4" Content="Verwijderen" Width="100" Margin="5,2" 
                                        Click="btnRemoveItem_Click" IsEnabled="False" Style="{StaticResource DangerButtonStyle}"/>
                            </Grid>
                        </Border>

                        <!-- Total Display -->
                        <TextBlock Grid.Row="2" x:Name="txtTotal" FontWeight="Bold" FontSize="16" 
                                  HorizontalAlignment="Right" Margin="0,15,0,5"
                                  Foreground="{StaticResource PrimaryBrush}"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </ScrollViewer>

        <!-- Buttons at bottom - Always visible -->
        <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Background="White" Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnCancelDelivery" Content="Levering Annuleren" Width="160" Margin="0,0,10,0" 
                        Click="btnCancelDelivery_Click" Style="{StaticResource DangerButtonStyle}"
                        Visibility="Collapsed"/>
                <Button x:Name="btnCancel" Content="Annuleren" Width="120" Margin="10,0" 
                        Click="btnCancel_Click" Style="{StaticResource SecondaryButtonStyle}"/>
                <Button x:Name="btnSave" Content="Opslaan" Width="120" Margin="10,0,0,0" 
                        Click="btnSave_Click" Style="{StaticResource SuccessButtonStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
