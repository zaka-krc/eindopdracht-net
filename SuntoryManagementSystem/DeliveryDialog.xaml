<Window x:Class="SuntoryManagementSystem.DeliveryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Levering" Height="500" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Referentienummer:" VerticalAlignment="Center"/>
        <TextBox x:Name="txtReferenceNumber" Grid.Row="0" Grid.Column="1" Margin="0,5"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Leverancier:" VerticalAlignment="Center"/>
        <ComboBox x:Name="cmbSupplier" Grid.Row="1" Grid.Column="1" Margin="0,5" 
                  DisplayMemberPath="SupplierName" SelectedValuePath="SupplierId"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Voertuig:" VerticalAlignment="Center"/>
        <ComboBox x:Name="cmbVehicle" Grid.Row="2" Grid.Column="1" Margin="0,5" 
                  DisplayMemberPath="LicensePlate" SelectedValuePath="VehicleId"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Verwachte datum:" VerticalAlignment="Center"/>
        <DatePicker x:Name="dpExpectedDate" Grid.Row="3" Grid.Column="1" Margin="0,5"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Status:" VerticalAlignment="Center"/>
        <ComboBox x:Name="cmbStatus" Grid.Row="4" Grid.Column="1" Margin="0,5">
            <ComboBoxItem Content="Pending" IsSelected="True"/>
            <ComboBoxItem Content="In Transit"/>
            <ComboBoxItem Content="Delivered"/>
            <ComboBoxItem Content="Cancelled"/>
        </ComboBox>

        <Label Grid.Row="5" Grid.Column="0" Content="Totaalbedrag (EUR):" VerticalAlignment="Center"/>
        <TextBox x:Name="txtTotalAmount" Grid.Row="5" Grid.Column="1" Margin="0,5"/>

        <Label Grid.Row="6" Grid.Column="0" Content="Verwerkt:" VerticalAlignment="Center"/>
        <CheckBox x:Name="chkIsProcessed" Grid.Row="6" Grid.Column="1" Margin="0,5" VerticalAlignment="Center"/>

        <Label Grid.Row="7" Grid.Column="0" Content="Opmerkingen:" VerticalAlignment="Top" Margin="0,5,0,0"/>
        <TextBox x:Name="txtNotes" Grid.Row="7" Grid.Column="1" 
                 TextWrapping="Wrap" AcceptsReturn="True" 
                 VerticalScrollBarVisibility="Auto" Margin="0,5"/>

        <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnSave" Content="Opslaan" Width="100" Margin="5" Click="btnSave_Click"/>
            <Button x:Name="btnCancel" Content="Annuleren" Width="100" Margin="5" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>