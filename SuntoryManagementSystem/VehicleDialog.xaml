<Window x:Class="SuntoryManagementSystem.VehicleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Voertuig" Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Kenteken:" VerticalAlignment="Center"/>
        <TextBox x:Name="txtLicensePlate" Grid.Row="0" Grid.Column="1" Margin="0,5"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Merk:" VerticalAlignment="Center"/>
        <TextBox x:Name="txtBrand" Grid.Row="1" Grid.Column="1" Margin="0,5"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Model:" VerticalAlignment="Center"/>
        <TextBox x:Name="txtModel" Grid.Row="2" Grid.Column="1" Margin="0,5"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Type:" VerticalAlignment="Center"/>
        <ComboBox x:Name="cmbVehicleType" Grid.Row="3" Grid.Column="1" Margin="0,5">
            <ComboBoxItem Content="Van" IsSelected="True"/>
            <ComboBoxItem Content="Truck"/>
            <ComboBoxItem Content="Lorry"/>
        </ComboBox>

        <Label Grid.Row="4" Grid.Column="0" Content="Capaciteit (kg):" VerticalAlignment="Center"/>
        <TextBox x:Name="txtCapacity" Grid.Row="4" Grid.Column="1" Margin="0,5"/>

        <Label Grid.Row="5" Grid.Column="0" Content="Beschikbaar:" VerticalAlignment="Center"/>
        <CheckBox x:Name="chkIsAvailable" Grid.Row="5" Grid.Column="1" Margin="0,5" VerticalAlignment="Center" IsChecked="True"/>

        <Label Grid.Row="6" Grid.Column="0" Content="Opmerkingen:" VerticalAlignment="Top" Margin="0,5,0,0"/>
        <TextBox x:Name="txtNotes" Grid.Row="6" Grid.Column="1" 
                 TextWrapping="Wrap" AcceptsReturn="True" 
                 VerticalScrollBarVisibility="Auto" Margin="0,5"/>

        <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnSave" Content="Opslaan" Width="100" Margin="5" Click="btnSave_Click"/>
            <Button x:Name="btnCancel" Content="Annuleren" Width="100" Margin="5" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>