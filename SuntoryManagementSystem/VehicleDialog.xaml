<Window x:Class="SuntoryManagementSystem.VehicleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Suntory - Voertuig" 
        Height="500" Width="520"
        MinHeight="400" MinWidth="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{StaticResource BackgroundBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="25,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Kenteken:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtLicensePlate" Grid.Row="0" Grid.Column="1" Style="{StaticResource TextBoxStyle}"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Merk:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtBrand" Grid.Row="1" Grid.Column="1" Style="{StaticResource TextBoxStyle}"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Model:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtModel" Grid.Row="2" Grid.Column="1" Style="{StaticResource TextBoxStyle}"/>

                <Label Grid.Row="3" Grid.Column="0" Content="Type:" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="cmbVehicleType" Grid.Row="3" Grid.Column="1" Style="{StaticResource ComboBoxStyle}">
                    <ComboBoxItem Content="Van" IsSelected="True"/>
                    <ComboBoxItem Content="Truck"/>
                    <ComboBoxItem Content="Lorry"/>
                </ComboBox>

                <Label Grid.Row="4" Grid.Column="0" Content="Capaciteit (kg):" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtCapacity" Grid.Row="4" Grid.Column="1" Style="{StaticResource TextBoxStyle}"/>

                <Label Grid.Row="5" Grid.Column="0" Content="Beschikbaar:" Style="{StaticResource LabelStyle}"/>
                <CheckBox x:Name="chkIsAvailable" Grid.Row="5" Grid.Column="1" Margin="0,10" VerticalAlignment="Center" IsChecked="True"/>

                <Label Grid.Row="6" Grid.Column="0" Content="Opmerkingen:" Style="{StaticResource LabelStyle}" VerticalAlignment="Top"/>
                <TextBox x:Name="txtNotes" Grid.Row="6" Grid.Column="1" 
                         Style="{StaticResource MultilineTextBoxStyle}"
                         MinHeight="80" MaxHeight="120"/>
            </Grid>
        </ScrollViewer>

        <!-- Buttons at bottom - Always visible -->
        <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Background="White" Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnSave" Content="Opslaan" Width="120" Margin="0,0,10,0" 
                        Click="btnSave_Click" Style="{StaticResource SuccessButtonStyle}"/>
                <Button x:Name="btnCancel" Content="Annuleren" Width="120" Margin="10,0,0,0" 
                        Click="btnCancel_Click" Style="{StaticResource SecondaryButtonStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>