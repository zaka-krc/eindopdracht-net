<Window x:Class="SuntoryManagementSystem.StockAdjustmentTypeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Type Voorraad Aanpassing" Height="320" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header met info -->
        <Border Grid.Row="0" Background="#FFF3E0" BorderBrush="#FF9800" BorderThickness="2" 
                Padding="10" Margin="0,0,0,15" CornerRadius="5">
            <StackPanel>
                <TextBlock FontWeight="Bold" FontSize="14" Foreground="#E65100">
                    Voorraad Vermindering Gedetecteerd
                </TextBlock>
                <TextBlock Margin="0,5,0,0" TextWrapping="Wrap" Foreground="#E65100">
                    <Run Text="Je vermindert de voorraad met "/>
                    <Run x:Name="txtQuantityChange" FontWeight="Bold"/>
                    <Run Text=" stuks."/>
                    <LineBreak/>
                    <Run Text="Selecteer het type aanpassing:"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Type selectie -->
        <TextBlock Grid.Row="1" Text="Type Aanpassing:" FontWeight="Bold" Margin="0,0,0,10"/>
        
        <StackPanel Grid.Row="2">
            <RadioButton x:Name="rbRemoval" GroupName="AdjustmentType" Margin="0,5" IsChecked="True">
                <StackPanel>
                    <TextBlock FontWeight="Bold" FontSize="13">
                        Removal (Verwijdering)
                    </TextBlock>
                    <TextBlock Margin="20,2,0,0" FontSize="11" Foreground="Gray" TextWrapping="Wrap">
                        Normaal verwijderen van voorraad (verkoop, gebruik, etc.)
                    </TextBlock>
                </StackPanel>
            </RadioButton>

            <RadioButton x:Name="rbDamage" GroupName="AdjustmentType" Margin="0,10">
                <StackPanel>
                    <TextBlock FontWeight="Bold" FontSize="13">
                        Damage (Schade)
                    </TextBlock>
                    <TextBlock Margin="20,2,0,0" FontSize="11" Foreground="Gray" TextWrapping="Wrap">
                        Producten beschadigd tijdens opslag of transport
                    </TextBlock>
                </StackPanel>
            </RadioButton>

            <RadioButton x:Name="rbTheft" GroupName="AdjustmentType" Margin="0,10">
                <StackPanel>
                    <TextBlock FontWeight="Bold" FontSize="13">
                        Theft (Diefstal)
                    </TextBlock>
                    <TextBlock Margin="20,2,0,0" FontSize="11" Foreground="Gray" TextWrapping="Wrap">
                        Producten gestolen of vermist
                    </TextBlock>
                </StackPanel>
            </RadioButton>

            <RadioButton x:Name="rbCorrection" GroupName="AdjustmentType" Margin="0,10">
                <StackPanel>
                    <TextBlock FontWeight="Bold" FontSize="13">
                        Correction (Correctie)
                    </TextBlock>
                    <TextBlock Margin="20,2,0,0" FontSize="11" Foreground="Gray" TextWrapping="Wrap">
                        Correctie na inventarisatie of tellingsfout
                    </TextBlock>
                </StackPanel>
            </RadioButton>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="btnOk" Content="OK" Width="100" Margin="5" Click="btnOk_Click" 
                    Background="LimeGreen" FontWeight="Bold" IsDefault="True"/>
            <Button x:Name="btnCancel" Content="Annuleren" Width="100" Margin="5" Click="btnCancel_Click" 
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
