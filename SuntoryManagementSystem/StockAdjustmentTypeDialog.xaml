<Window x:Class="SuntoryManagementSystem.StockAdjustmentTypeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Suntory - Type Voorraad Aanpassing" 
        Height="380" Width="480"
        MinHeight="350" MinWidth="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{StaticResource BackgroundBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="25,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header met info -->
                <Border Grid.Row="0" Background="#FFF3E0" BorderBrush="#FF9800" BorderThickness="2" 
                        Padding="12" Margin="0,0,0,15" CornerRadius="4">
                    <StackPanel>
                        <TextBlock FontWeight="Bold" FontSize="14" Foreground="#E65100">
                            Voorraad Vermindering Gedetecteerd
                        </TextBlock>
                        <TextBlock Margin="0,5,0,0" TextWrapping="Wrap" Foreground="#E65100">
                            <Run Text="Je vermindert de voorraad met "/>
                            <Run x:Name="txtQuantityChange" FontWeight="Bold"/>
                            <Run Text=" stuks."/>
                            <LineBreak/>
                            <Run Text="Selecteer het type aanpassing:"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Type selectie -->
                <TextBlock Grid.Row="1" Text="Type Aanpassing:" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,10"/>
                
                <StackPanel Grid.Row="2">
                    <RadioButton x:Name="rbRemoval" GroupName="AdjustmentType" Margin="0,5" IsChecked="True">
                        <StackPanel>
                            <TextBlock FontWeight="SemiBold" FontSize="13">
                                Removal (Verwijdering)
                            </TextBlock>
                            <TextBlock Margin="20,2,0,0" FontSize="11" Foreground="#757575" TextWrapping="Wrap">
                                Normaal verwijderen van voorraad (verkoop, gebruik, etc.)
                            </TextBlock>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton x:Name="rbDamage" GroupName="AdjustmentType" Margin="0,10">
                        <StackPanel>
                            <TextBlock FontWeight="SemiBold" FontSize="13">
                                Damage (Schade)
                            </TextBlock>
                            <TextBlock Margin="20,2,0,0" FontSize="11" Foreground="#757575" TextWrapping="Wrap">
                                Producten beschadigd tijdens opslag of transport
                            </TextBlock>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton x:Name="rbTheft" GroupName="AdjustmentType" Margin="0,10">
                        <StackPanel>
                            <TextBlock FontWeight="SemiBold" FontSize="13">
                                Theft (Diefstal)
                            </TextBlock>
                            <TextBlock Margin="20,2,0,0" FontSize="11" Foreground="#757575" TextWrapping="Wrap">
                                Producten gestolen of vermist
                            </TextBlock>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton x:Name="rbCorrection" GroupName="AdjustmentType" Margin="0,10,0,5">
                        <StackPanel>
                            <TextBlock FontWeight="SemiBold" FontSize="13">
                                Correction (Correctie)
                            </TextBlock>
                            <TextBlock Margin="20,2,0,0" FontSize="11" Foreground="#757575" TextWrapping="Wrap">
                                Correctie na inventarisatie of tellingsfout
                            </TextBlock>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Buttons at bottom - Always visible -->
        <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Background="White" Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnOk" Content="OK" Width="120" Margin="0,0,10,0" Click="btnOk_Click" 
                        Style="{StaticResource SuccessButtonStyle}" IsDefault="True"/>
                <Button x:Name="btnCancel" Content="Annuleren" Width="120" Margin="10,0,0,0" Click="btnCancel_Click" 
                        Style="{StaticResource SecondaryButtonStyle}" IsCancel="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
