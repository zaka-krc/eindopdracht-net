<Window x:Class="SuntoryManagementSystem.StockAdditionTypeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Suntory - Type Voorraad Toevoeging" 
        Height="340" Width="480"
        MinHeight="300" MinWidth="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{StaticResource BackgroundBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="25,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header met info -->
                <Border Grid.Row="0" Background="#E8F5E9" BorderBrush="#4CAF50" BorderThickness="2" 
                        Padding="12" Margin="0,0,0,15" CornerRadius="4">
                    <StackPanel>
                        <TextBlock FontWeight="Bold" FontSize="14" Foreground="#1B5E20">
                            Voorraad Toevoeging Gedetecteerd
                        </TextBlock>
                        <TextBlock Margin="0,5,0,0" TextWrapping="Wrap" Foreground="#1B5E20">
                            <Run Text="Je voegt "/>
                            <Run x:Name="txtQuantityChange" FontWeight="Bold"/>
                            <Run Text=" stuks toe aan de voorraad."/>
                            <LineBreak/>
                            <Run Text="Selecteer het type aanpassing:"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Type selectie -->
                <TextBlock Grid.Row="1" Text="Type Aanpassing:" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,10"/>
                
                <StackPanel Grid.Row="2">
                    <RadioButton x:Name="rbAddition" GroupName="AdjustmentType" Margin="0,5" IsChecked="True">
                        <StackPanel>
                            <TextBlock FontWeight="SemiBold" FontSize="13">
                                Addition (Toevoeging)
                            </TextBlock>
                            <TextBlock Margin="20,2,0,0" FontSize="11" Foreground="#757575" TextWrapping="Wrap">
                                Normaal toevoegen van voorraad (nieuwe levering, retour, etc.)
                            </TextBlock>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton x:Name="rbCorrection" GroupName="AdjustmentType" Margin="0,10,0,5">
                        <StackPanel>
                            <TextBlock FontWeight="SemiBold" FontSize="13">
                                Correction (Correctie)
                            </TextBlock>
                            <TextBlock Margin="20,2,0,0" FontSize="11" Foreground="#757575" TextWrapping="Wrap">
                                Correctie na inventarisatie of tellingsfout (meer gevonden dan verwacht)
                            </TextBlock>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Buttons at bottom - Always visible -->
        <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Background="White" Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnOk" Content="OK" Width="120" Margin="0,0,10,0" Click="btnOk_Click" 
                        Style="{StaticResource SuccessButtonStyle}" IsDefault="True"/>
                <Button x:Name="btnCancel" Content="Annuleren" Width="120" Margin="10,0,0,0" Click="btnCancel_Click" 
                        Style="{StaticResource SecondaryButtonStyle}" IsCancel="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
