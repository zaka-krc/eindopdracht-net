<Window x:Class="SuntoryManagementSystem.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Suntory - Klant" 
        Height="600" Width="520"
        MinHeight="400" MinWidth="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{StaticResource BackgroundBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="25,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Klantnaam:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtCustomerName" Grid.Row="0" Grid.Column="1" Style="{StaticResource TextBoxStyle}"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Adres:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtAddress" Grid.Row="1" Grid.Column="1" Style="{StaticResource TextBoxStyle}"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Postcode:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtPostalCode" Grid.Row="2" Grid.Column="1" Style="{StaticResource TextBoxStyle}"/>

                <Label Grid.Row="3" Grid.Column="0" Content="Plaats:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtCity" Grid.Row="3" Grid.Column="1" Style="{StaticResource TextBoxStyle}"/>

                <Label Grid.Row="4" Grid.Column="0" Content="Telefoonnummer:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtPhoneNumber" Grid.Row="4" Grid.Column="1" Style="{StaticResource TextBoxStyle}"/>

                <Label Grid.Row="5" Grid.Column="0" Content="Email:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtEmail" Grid.Row="5" Grid.Column="1" Style="{StaticResource TextBoxStyle}"/>

                <Label Grid.Row="6" Grid.Column="0" Content="Contactpersoon:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtContactPerson" Grid.Row="6" Grid.Column="1" Style="{StaticResource TextBoxStyle}"/>

                <Label Grid.Row="7" Grid.Column="0" Content="Type:" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="cmbCustomerType" Grid.Row="7" Grid.Column="1" Style="{StaticResource ComboBoxStyle}">
                    <ComboBoxItem Content="Retail" IsSelected="True"/>
                    <ComboBoxItem Content="Wholesale"/>
                    <ComboBoxItem Content="HoReCa"/>
                </ComboBox>

                <Label Grid.Row="8" Grid.Column="0" Content="Status:" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="cmbStatus" Grid.Row="8" Grid.Column="1" Style="{StaticResource ComboBoxStyle}">
                    <ComboBoxItem Content="Active" IsSelected="True"/>
                    <ComboBoxItem Content="Inactive"/>
                </ComboBox>

                <Label Grid.Row="9" Grid.Column="0" Content="Opmerkingen:" Style="{StaticResource LabelStyle}" VerticalAlignment="Top"/>
                <TextBox x:Name="txtNotes" Grid.Row="9" Grid.Column="1" 
                         Style="{StaticResource MultilineTextBoxStyle}"
                         MinHeight="80" MaxHeight="120"/>
            </Grid>
        </ScrollViewer>

        <!-- Buttons at bottom - Always visible -->
        <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Background="White" Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnSave" Content="Opslaan" Width="120" Margin="0,0,10,0" 
                        Click="btnSave_Click" Style="{StaticResource SuccessButtonStyle}"/>
                <Button x:Name="btnCancel" Content="Annuleren" Width="120" Margin="10,0,0,0" 
                        Click="btnCancel_Click" Style="{StaticResource SecondaryButtonStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
