<Window x:Class="SuntoryManagementSystem.UserRolesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Suntory - Rollen Beheren"
        Height="500" Width="540"
        MinHeight="450" MinWidth="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="25,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="SUNTORY" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Rollen Beheren" 
                               FontSize="14" 
                               Foreground="#333333"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- User Info -->
                <Border Grid.Row="1" 
                        Background="{StaticResource InfoBackgroundBrush}" 
                        CornerRadius="4" 
                        Padding="15" 
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock x:Name="txtUserName" 
                                   Text="[Gebruiker]" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryBrush}"/>
                        <TextBlock x:Name="txtUserEmail" 
                                   Text="[Email]" 
                                   FontSize="12" 
                                   Foreground="#424242"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Instructions -->
                <TextBlock Grid.Row="2" 
                           Text="Selecteer de rollen voor deze gebruiker:" 
                           FontWeight="SemiBold"
                           FontSize="13"
                           Margin="0,0,0,10"/>

                <!-- Roles Checkboxes -->
                <StackPanel Grid.Row="3" Margin="10,0,0,0">
                    <CheckBox x:Name="chkAdministrator" 
                              Content="Administrator" 
                              FontSize="14"
                              FontWeight="SemiBold"
                              Margin="0,5"/>
                    <TextBlock Text="Volledige toegang tot alle functionaliteiten inclusief gebruikersbeheer" 
                               FontSize="11" 
                               Foreground="#757575"
                               Margin="25,0,0,12"
                               TextWrapping="Wrap"/>

                    <CheckBox x:Name="chkManager" 
                              Content="Manager" 
                              FontSize="14"
                              FontWeight="SemiBold"
                              Margin="0,5"/>
                    <TextBlock Text="Toegang tot alle operationele functionaliteiten" 
                               FontSize="11" 
                               Foreground="#757575"
                               Margin="25,0,0,12"
                               TextWrapping="Wrap"/>

                    <CheckBox x:Name="chkEmployee" 
                              Content="Employee" 
                              FontSize="14"
                              FontWeight="SemiBold"
                              Margin="0,5"/>
                    <TextBlock Text="Beperkte toegang: geen verwijderen, geen voertuigenbeheer" 
                               FontSize="11" 
                               Foreground="#757575"
                               Margin="25,0,0,12"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Info -->
                <Border Grid.Row="4" 
                        Background="#FFF3E0" 
                        CornerRadius="4" 
                        Padding="12"
                        Margin="0,15,0,0">
                    <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="#F57C00">
                        <Run Text="BELANGRIJK: Een gebruiker kan meerdere rollen hebben. De hoogste rol bepaalt de rechten."/>
                    </TextBlock>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Buttons at bottom - Always visible -->
        <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Background="White" Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Opslaan" 
                        Style="{StaticResource SuccessButtonStyle}"
                        Click="btnSave_Click"
                        Width="120"
                        Margin="0,0,10,0"
                        IsDefault="True"/>
                <Button Content="Annuleren" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="btnCancel_Click"
                        Width="120"
                        Margin="10,0,0,0"
                        IsCancel="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
