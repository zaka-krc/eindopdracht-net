<Window x:Class="SuntoryManagementSystem.SupplierDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Leverancier" Height="500" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Leveranciersnaam:" VerticalAlignment="Center"/>
        <TextBox x:Name="txtSupplierName" Grid.Row="0" Grid.Column="1" Margin="0,5"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Adres:" VerticalAlignment="Center"/>
        <TextBox x:Name="txtAddress" Grid.Row="1" Grid.Column="1" Margin="0,5"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Postcode:" VerticalAlignment="Center"/>
        <TextBox x:Name="txtPostalCode" Grid.Row="2" Grid.Column="1" Margin="0,5"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Plaats:" VerticalAlignment="Center"/>
        <TextBox x:Name="txtCity" Grid.Row="3" Grid.Column="1" Margin="0,5"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Telefoonnummer:" VerticalAlignment="Center"/>
        <TextBox x:Name="txtPhoneNumber" Grid.Row="4" Grid.Column="1" Margin="0,5"/>

        <Label Grid.Row="5" Grid.Column="0" Content="Email:" VerticalAlignment="Center"/>
        <TextBox x:Name="txtEmail" Grid.Row="5" Grid.Column="1" Margin="0,5"/>

        <Label Grid.Row="6" Grid.Column="0" Content="Contactpersoon:" VerticalAlignment="Center"/>
        <TextBox x:Name="txtContactPerson" Grid.Row="6" Grid.Column="1" Margin="0,5"/>

        <Label Grid.Row="7" Grid.Column="0" Content="Status:" VerticalAlignment="Center"/>
        <ComboBox x:Name="cmbStatus" Grid.Row="7" Grid.Column="1" Margin="0,5">
            <ComboBoxItem Content="Active" IsSelected="True"/>
            <ComboBoxItem Content="Inactive"/>
        </ComboBox>

        <Label Grid.Row="8" Grid.Column="0" Content="Opmerkingen:" VerticalAlignment="Top" Margin="0,5,0,0"/>
        <TextBox x:Name="txtNotes" Grid.Row="8" Grid.Column="1" Grid.RowSpan="2" 
                 TextWrapping="Wrap" AcceptsReturn="True" 
                 VerticalScrollBarVisibility="Auto" Height="80" Margin="0,5"/>

        <StackPanel Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnSave" Content="Opslaan" Width="100" Margin="5" Click="btnSave_Click" Background="LimeGreen" FontWeight="Bold"/>
            <Button x:Name="btnCancel" Content="Annuleren" Width="100" Margin="5" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>