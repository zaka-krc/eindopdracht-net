<Window x:Class="SuntoryManagementSystem.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Suntory - Registreren"
        Height="550" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                        HorizontalAlignment="Center" Margin="0,0,0,25">
                <TextBlock Text="SUNTORY" 
                           FontSize="24" 
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Nieuw Account Registreren" 
                           FontSize="14" 
                           Foreground="#333333"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Volledige Naam -->
            <Label Content="Volledige Naam: *" 
                   Grid.Row="1" Grid.Column="0" 
                   Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="txtFullName" 
                     Grid.Row="1" Grid.Column="1" 
                     Style="{StaticResource TextBoxStyle}"/>

            <!-- Email -->
            <Label Content="E-mailadres: *" 
                   Grid.Row="2" Grid.Column="0" 
                   Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="txtEmail" 
                     Grid.Row="2" Grid.Column="1" 
                     Style="{StaticResource TextBoxStyle}"/>

            <!-- Afdeling -->
            <Label Content="Afdeling:" 
                   Grid.Row="3" Grid.Column="0" 
                   Style="{StaticResource LabelStyle}"/>
            <ComboBox x:Name="cmbDepartment" 
                      Grid.Row="3" Grid.Column="1" 
                      Style="{StaticResource ComboBoxStyle}">
                <ComboBoxItem Content="IT"/>
                <ComboBoxItem Content="Logistics"/>
                <ComboBoxItem Content="Warehouse"/>
                <ComboBoxItem Content="Sales"/>
                <ComboBoxItem Content="Finance"/>
                <ComboBoxItem Content="HR"/>
            </ComboBox>

            <!-- Functie -->
            <Label Content="Functie:" 
                   Grid.Row="4" Grid.Column="0" 
                   Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="txtJobTitle" 
                     Grid.Row="4" Grid.Column="1" 
                     Style="{StaticResource TextBoxStyle}"/>

            <!-- Wachtwoord -->
            <Label Content="Wachtwoord: *" 
                   Grid.Row="5" Grid.Column="0" 
                   Style="{StaticResource LabelStyle}"/>
            <StackPanel Grid.Row="5" Grid.Column="1">
                <PasswordBox x:Name="txtPassword" 
                             Style="{StaticResource PasswordStyle}"
                             PasswordChar="?"/>
                <TextBlock Text="Min. 6 tekens, 1 hoofdletter, 1 cijfer" 
                           FontSize="10" 
                           Foreground="#757575"
                           Margin="0,2,0,0"/>
            </StackPanel>

            <!-- Bevestig Wachtwoord -->
            <Label Content="Bevestig Wachtwoord: *" 
                   Grid.Row="6" Grid.Column="0" 
                   Style="{StaticResource LabelStyle}"/>
            <PasswordBox x:Name="txtConfirmPassword" 
                         Grid.Row="6" Grid.Column="1" 
                         Style="{StaticResource PasswordStyle}"
                         PasswordChar="?"/>

            <!-- Error message -->
            <TextBlock x:Name="txtError" 
                       Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"
                       Foreground="{StaticResource ErrorBrush}"
                       FontSize="12"
                       TextWrapping="Wrap"
                       Margin="15,10"
                       Visibility="Collapsed"/>

            <!-- Info Box -->
            <Border Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2"
                    Background="{StaticResource InfoBackgroundBrush}"
                    CornerRadius="4"
                    Padding="10"
                    Margin="0,10,0,0">
                <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="{StaticResource PrimaryBrush}">
                    <Run Text="INFO: Nieuwe accounts krijgen automatisch de rol "/>
                    <Run Text="'Employee'" FontWeight="Bold"/>
                    <Run Text=". Een administrator kan later extra rollen toewijzen."/>
                </TextBlock>
            </Border>

            <!-- Buttons -->
            <StackPanel Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" 
                        Orientation="Horizontal"
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,10">
                <Button Content="Registreren" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="btnRegister_Click"
                        Width="120"
                        Margin="0,0,5,0"
                        IsDefault="True"/>
                <Button Content="Annuleren" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="btnCancel_Click"
                        Width="120"
                        Margin="5,0,0,0"
                        IsCancel="True"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
