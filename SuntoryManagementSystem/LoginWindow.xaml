<Window x:Class="SuntoryManagementSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Suntory - Inloggen"
        Height="480" Width="420"
        MinHeight="400" MinWidth="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{StaticResource BackgroundBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                        HorizontalAlignment="Center" Margin="0,10,0,25">
                <TextBlock Text="SUNTORY" 
                           FontSize="28" 
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Management System" 
                           FontSize="14" 
                           Foreground="#757575"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <!-- E-mailadres -->
            <Label Content="E-mailadres:" 
                   Grid.Row="1" Grid.Column="0" 
                   Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="txtEmail" 
                     Grid.Row="1" Grid.Column="1" 
                     Style="{StaticResource TextBoxStyle}"
                     Text="admin@suntory.com"
                     MinWidth="220"/>

            <!-- Wachtwoord -->
            <Label Content="Wachtwoord:" 
                   Grid.Row="2" Grid.Column="0" 
                   Style="{StaticResource LabelStyle}"/>
            <PasswordBox x:Name="txtPassword" 
                         Grid.Row="2" Grid.Column="1" 
                         Style="{StaticResource PasswordStyle}"
                         PasswordChar="â—"
                         MinWidth="220"/>

            <!-- Error message -->
            <TextBlock x:Name="txtError" 
                       Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                       Foreground="{StaticResource ErrorBrush}"
                       FontSize="12"
                       TextWrapping="Wrap"
                       Margin="5,10"
                       Visibility="Collapsed"
                       HorizontalAlignment="Center"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" 
                        HorizontalAlignment="Center" 
                        Margin="0,15,0,0">
                <Button Content="Inloggen" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="btnLogin_Click"
                        Width="220"
                        IsDefault="True"/>
                <Button Content="Registreren" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="btnRegister_Click"
                        Width="220"/>
            </StackPanel>

            <!-- Info Box -->
            <Border Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                    Background="{StaticResource InfoBackgroundBrush}"
                    CornerRadius="4"
                    Padding="12"
                    Margin="0,20,0,15">
                <StackPanel>
                    <TextBlock Text="Demo Accounts:" 
                               FontWeight="Bold" 
                               FontSize="12"
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,0,0,8"/>
                    <TextBlock FontSize="11" Foreground="#424242" Margin="0,2">
                        <Run Text="Admin:" FontWeight="SemiBold"/>
                        <Run Text="admin@suntory.com"/>
                        <Run Text="/ Admin@123"/>
                    </TextBlock>
                    <TextBlock FontSize="11" Foreground="#424242" Margin="0,2">
                        <Run Text="Manager:" FontWeight="SemiBold"/>
                        <Run Text="manager@suntory.com"/>
                        <Run Text="/ Manager@123"/>
                    </TextBlock>
                    <TextBlock FontSize="11" Foreground="#424242" Margin="0,2">
                        <Run Text="Employee:" FontWeight="SemiBold"/>
                        <Run Text="employee@suntory.com"/>
                        <Run Text="/ Employee@123"/>
                    </TextBlock>
                    <TextBlock FontSize="10" Foreground="#757575" Margin="0,6,0,0" FontStyle="Italic">
                        <Run Text="+5 meer accounts beschikbaar (zie database)"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Window>
