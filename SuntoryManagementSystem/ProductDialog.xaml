<Window x:Class="SuntoryManagementSystem.ProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product" Height="550" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Productnaam:" VerticalAlignment="Center"/>
        <TextBox x:Name="txtProductName" Grid.Row="0" Grid.Column="1" Margin="0,5"/>

        <Label Grid.Row="1" Grid.Column="0" Content="SKU:" VerticalAlignment="Center"/>
        <TextBox x:Name="txtSKU" Grid.Row="1" Grid.Column="1" Margin="0,5"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Categorie:" VerticalAlignment="Center"/>
        <ComboBox x:Name="cmbCategory" Grid.Row="2" Grid.Column="1" Margin="0,5" IsEditable="True">
            <ComboBoxItem Content="Frisdrank"/>
            <ComboBoxItem Content="Water"/>
            <ComboBoxItem Content="Energiedrank"/>
            <ComboBoxItem Content="Sap"/>
            <ComboBoxItem Content="Overig"/>
        </ComboBox>

        <Label Grid.Row="3" Grid.Column="0" Content="Leverancier:" VerticalAlignment="Center"/>
        <ComboBox x:Name="cmbSupplier" Grid.Row="3" Grid.Column="1" Margin="0,5" 
                  DisplayMemberPath="SupplierName" SelectedValuePath="SupplierId"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Inkoopprijs (EUR):" VerticalAlignment="Center"/>
        <TextBox x:Name="txtPurchasePrice" Grid.Row="4" Grid.Column="1" Margin="0,5"/>

        <Label Grid.Row="5" Grid.Column="0" Content="Verkoopprijs (EUR):" VerticalAlignment="Center"/>
        <TextBox x:Name="txtSellingPrice" Grid.Row="5" Grid.Column="1" Margin="0,5"/>

        <Label Grid.Row="6" Grid.Column="0" Content="Voorraad:" VerticalAlignment="Center"/>
        <TextBox x:Name="txtStockQuantity" Grid.Row="6" Grid.Column="1" Margin="0,5"/>

        <Label Grid.Row="7" Grid.Column="0" Content="Min. Voorraad:" VerticalAlignment="Center"/>
        <TextBox x:Name="txtMinimumStock" Grid.Row="7" Grid.Column="1" Margin="0,5"/>

        <Label Grid.Row="8" Grid.Column="0" Content="Actief:" VerticalAlignment="Center"/>
        <CheckBox x:Name="chkIsActive" Grid.Row="8" Grid.Column="1" Margin="0,5" VerticalAlignment="Center" IsChecked="True"/>

        <Label Grid.Row="9" Grid.Column="0" Content="Beschrijving:" VerticalAlignment="Top" Margin="0,5,0,0"/>
        <TextBox x:Name="txtDescription" Grid.Row="9" Grid.Column="1" Grid.RowSpan="2" 
                 TextWrapping="Wrap" AcceptsReturn="True" 
                 VerticalScrollBarVisibility="Auto" Height="80" Margin="0,5"/>

        <StackPanel Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnSave" Content="Opslaan" Width="100" Margin="5" Click="btnSave_Click" Background="LimeGreen" FontWeight="Bold"/>
            <Button x:Name="btnCancel" Content="Annuleren" Width="100" Margin="5" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>