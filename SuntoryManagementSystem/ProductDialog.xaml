<Window x:Class="SuntoryManagementSystem.ProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Suntory - Product" 
        Height="600" Width="520"
        MinHeight="400" MinWidth="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{StaticResource BackgroundBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="25,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Productnaam:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtProductName" Grid.Row="0" Grid.Column="1" Style="{StaticResource TextBoxStyle}"/>

                <Label Grid.Row="1" Grid.Column="0" Content="SKU:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtSKU" Grid.Row="1" Grid.Column="1" Style="{StaticResource TextBoxStyle}"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Categorie:" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="cmbCategory" Grid.Row="2" Grid.Column="1" Style="{StaticResource ComboBoxStyle}" IsEditable="True">
                    <ComboBoxItem Content="Frisdrank"/>
                    <ComboBoxItem Content="Water"/>
                    <ComboBoxItem Content="Energiedrank"/>
                    <ComboBoxItem Content="Sap"/>
                    <ComboBoxItem Content="Mixer"/>
                    <ComboBoxItem Content="Overig"/>
                </ComboBox>

                <Label Grid.Row="3" Grid.Column="0" Content="Leverancier:" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="cmbSupplier" Grid.Row="3" Grid.Column="1" Style="{StaticResource ComboBoxStyle}" 
                          DisplayMemberPath="SupplierName" SelectedValuePath="SupplierId"/>

                <Label Grid.Row="4" Grid.Column="0" Content="Inkoopprijs (EUR):" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtPurchasePrice" Grid.Row="4" Grid.Column="1" Style="{StaticResource TextBoxStyle}"/>

                <Label Grid.Row="5" Grid.Column="0" Content="Verkoopprijs (EUR):" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtSellingPrice" Grid.Row="5" Grid.Column="1" Style="{StaticResource TextBoxStyle}"/>

                <Label Grid.Row="6" Grid.Column="0" Content="Voorraad:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtStockQuantity" Grid.Row="6" Grid.Column="1" Style="{StaticResource TextBoxStyle}"/>

                <Label Grid.Row="7" Grid.Column="0" Content="Min. Voorraad:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtMinimumStock" Grid.Row="7" Grid.Column="1" Style="{StaticResource TextBoxStyle}"/>

                <Label Grid.Row="8" Grid.Column="0" Content="Actief:" Style="{StaticResource LabelStyle}"/>
                <CheckBox x:Name="chkIsActive" Grid.Row="8" Grid.Column="1" Margin="0,10" VerticalAlignment="Center" IsChecked="True"/>

                <Label Grid.Row="9" Grid.Column="0" Content="Beschrijving:" Style="{StaticResource LabelStyle}" VerticalAlignment="Top"/>
                <TextBox x:Name="txtDescription" Grid.Row="9" Grid.Column="1" 
                         Style="{StaticResource MultilineTextBoxStyle}"
                         MinHeight="80" MaxHeight="150"/>
            </Grid>
        </ScrollViewer>

        <!-- Buttons at bottom - Always visible -->
        <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Background="White" Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnSave" Content="Opslaan" Width="120" Margin="0,0,10,0" 
                        Click="btnSave_Click" Style="{StaticResource SuccessButtonStyle}"/>
                <Button x:Name="btnCancel" Content="Annuleren" Width="120" Margin="10,0,0,0" 
                        Click="btnCancel_Click" Style="{StaticResource SecondaryButtonStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>