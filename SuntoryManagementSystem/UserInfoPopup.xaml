<Window x:Class="SuntoryManagementSystem.UserInfoPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gebruikersinfo"
        Height="220" Width="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        ShowInTaskbar="False"
        Topmost="True"
        Deactivated="Window_Deactivated">

    <Border Background="White" 
            CornerRadius="6" 
            BorderBrush="{StaticResource PrimaryBrush}"
            BorderThickness="2"
            Effect="{DynamicResource DropShadowEffect}">
        <Border.Resources>
            <DropShadowEffect x:Key="DropShadowEffect" 
                              Color="Black" 
                              Opacity="0.25" 
                              BlurRadius="12" 
                              ShadowDepth="3"/>
        </Border.Resources>

        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,8">
                <TextBlock x:Name="txtFullName"
                           Text="Gebruiker Naam" 
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryDarkBrush}"
                           TextAlignment="Center"
                           TextTrimming="CharacterEllipsis"
                           TextWrapping="NoWrap"/>
                
                <TextBlock x:Name="txtRole"
                           Text="Rol" 
                           FontSize="12"
                           Foreground="{StaticResource SecondaryBrush}"
                           TextAlignment="Center"
                           Margin="0,2,0,0"/>
            </StackPanel>

            <!-- Separator -->
            <Separator Grid.Row="1" Margin="0,3,0,8"/>

            <!-- Details -->
            <StackPanel Grid.Row="2" Margin="0,0,0,8">
                <!-- Email -->
                <Grid Margin="0,0,0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="E-mail" 
                               Grid.Column="0"
                               FontSize="11" 
                               Foreground="{StaticResource SecondaryBrush}"
                               FontWeight="SemiBold"
                               VerticalAlignment="Top"/>
                    <TextBlock x:Name="txtEmail"
                               Grid.Column="1"
                               Text="email@example.com" 
                               FontSize="11"
                               TextTrimming="CharacterEllipsis"
                               TextWrapping="Wrap"
                               VerticalAlignment="Top"/>
                </Grid>

                <!-- Department -->
                <Grid Margin="0,0,0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Afdeling" 
                               Grid.Column="0"
                               FontSize="11" 
                               Foreground="{StaticResource SecondaryBrush}"
                               FontWeight="SemiBold"
                               VerticalAlignment="Top"/>
                    <TextBlock x:Name="txtDepartment"
                               Grid.Column="1"
                               Text="Geen afdeling" 
                               FontSize="11"
                               VerticalAlignment="Top"/>
                </Grid>

                <!-- Last Login -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Laatste login" 
                               Grid.Column="0"
                               FontSize="11" 
                               Foreground="{StaticResource SecondaryBrush}"
                               FontWeight="SemiBold"
                               VerticalAlignment="Top"/>
                    <TextBlock x:Name="txtLastLogin"
                               Grid.Column="1"
                               Text="Nooit" 
                               FontSize="11"
                               VerticalAlignment="Top"/>
                </Grid>
            </StackPanel>

            <!-- Close Button -->
            <Button Grid.Row="3"
                    Content="Sluiten"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Click="btnClose_Click"
                    Height="28"
                    Padding="10,4"
                    FontSize="11"/>
        </Grid>
    </Border>
</Window>
