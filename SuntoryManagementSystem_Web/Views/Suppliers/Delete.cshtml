@model SuntoryManagementSystem.Models.Supplier

@{
    ViewData["Title"] = "Leverancier Verwijderen";
}

<div class="container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header page-header-info shadow-soft mb-4">
        <div class="container-fluid px-4">
            <h1 class="display-5 fw-bold mb-2">
                <i class="bi bi-trash-fill me-3"></i>Leverancier Verwijderen
            </h1>
            <p class="mb-0 opacity-75">Weet u zeker dat u deze leverancier wilt verwijderen?</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm border-left-danger">
                <div class="card-body p-4">
                    <div class="alert alert-warning alert-icon rounded-custom mb-4" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong>Waarschuwing!</strong> Deze actie kan niet ongedaan gemaakt worden.
                    </div>

                    <!-- Supplier Information -->
                    <div class="mb-4">
                        <h4 class="fw-bold text-gradient mb-3">
                            <i class="bi bi-info-circle me-2"></i>Leverancier Gegevens
                        </h4>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label text-muted small">
                                    <i class="bi bi-shop me-1"></i>Leverancier Naam
                                </label>
                                <p class="fs-5 fw-bold text-danger">@Html.DisplayFor(model => model.SupplierName)</p>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label text-muted small">
                                    <i class="bi bi-person me-1"></i>Contactpersoon
                                </label>
                                <p class="fs-5">@Html.DisplayFor(model => model.ContactPerson)</p>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label text-muted small">
                                    <i class="bi bi-envelope me-1"></i>Email
                                </label>
                                <p class="fs-5">@Html.DisplayFor(model => model.Email)</p>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label text-muted small">
                                    <i class="bi bi-telephone me-1"></i>Telefoonnummer
                                </label>
                                <p class="fs-5">@Html.DisplayFor(model => model.PhoneNumber)</p>
                            </div>
                            <div class="col-12">
                                <label class="form-label text-muted small">
                                    <i class="bi bi-geo-alt me-1"></i>Adres
                                </label>
                                <p class="fs-5">@Html.DisplayFor(model => model.Address), @Html.DisplayFor(model => model.PostalCode) @Html.DisplayFor(model => model.City)</p>
                            </div>
                        </div>
                    </div>

                    <!-- Delete Form -->
                    <div class="border-top pt-4 mt-4">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="SupplierId" />
                            <div class="d-flex gap-3 justify-content-end">
                                <a asp-action="Index" class="btn btn-lg btn-secondary">
                                    <i class="bi bi-x-circle me-2"></i>Annuleren
                                </a>
                                <button type="submit" class="btn btn-lg btn-danger">
                                    <i class="bi bi-trash-fill me-2"></i>Verwijderen Bevestigen
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
