@model SuntoryManagementSystem.Models.Supplier

@{
    ViewData["Title"] = "Leverancier Bewerken";
}

<div class="container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header page-header-warning shadow-soft mb-4">
        <div class="container-fluid px-4">
            <h1 class="display-5 fw-bold mb-2">
                <i class="bi bi-pencil-square me-3"></i>Leverancier Bewerken
            </h1>
            <p class="mb-0 opacity-75">Wijzig de gegevens van @Model.SupplierName</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="form-modern">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-custom" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    </div>
                    <input type="hidden" asp-for="SupplierId" />

                    <!-- Basic Information -->
                    <div class="mb-4">
                        <h4 class="fw-bold text-gradient mb-3">
                            <i class="bi bi-info-circle me-2"></i>Basis Informatie
                        </h4>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="SupplierName" class="form-label">
                                    <i class="bi bi-shop me-1"></i>Leverancier Naam
                                </label>
                                <input asp-for="SupplierName" class="form-control" />
                                <span asp-validation-for="SupplierName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ContactPerson" class="form-label">
                                    <i class="bi bi-person me-1"></i>Contactpersoon
                                </label>
                                <input asp-for="ContactPerson" class="form-control" />
                                <span asp-validation-for="ContactPerson" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Contact Information -->
                    <div class="mb-4">
                        <h4 class="fw-bold text-gradient mb-3">
                            <i class="bi bi-person-vcard me-2"></i>Contact Informatie
                        </h4>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label">
                                    <i class="bi bi-telephone me-1"></i>Telefoonnummer
                                </label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">
                                    <i class="bi bi-envelope me-1"></i>Email
                                </label>
                                <input asp-for="Email" class="form-control" type="email" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Address Information -->
                    <div class="mb-4">
                        <h4 class="fw-bold text-gradient mb-3">
                            <i class="bi bi-geo-alt me-2"></i>Adres Informatie
                        </h4>
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Address" class="form-label">
                                    <i class="bi bi-house me-1"></i>Adres
                                </label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="PostalCode" class="form-label">
                                    <i class="bi bi-mailbox me-1"></i>Postcode
                                </label>
                                <input asp-for="PostalCode" class="form-control" />
                                <span asp-validation-for="PostalCode" class="text-danger small"></span>
                            </div>
                            <div class="col-md-8">
                                <label asp-for="City" class="form-label">
                                    <i class="bi bi-building me-1"></i>Stad
                                </label>
                                <input asp-for="City" class="form-control" />
                                <span asp-validation-for="City" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Additional Information -->
                    <div class="mb-4">
                        <h4 class="fw-bold text-gradient mb-3">
                            <i class="bi bi-clipboard-check me-2"></i>Aanvullende Informatie
                        </h4>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Status" class="form-label">
                                    <i class="bi bi-circle-fill me-1"></i>Status
                                </label>
                                <select asp-for="Status" class="form-select">
                                    <option value="Active">Actief</option>
                                    <option value="Inactive">Inactief</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="CreatedDate" class="form-label">
                                    <i class="bi bi-calendar me-1"></i>Aanmaakdatum
                                </label>
                                <input asp-for="CreatedDate" class="form-control" type="date" readonly />
                                <span asp-validation-for="CreatedDate" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Notes" class="form-label">
                                    <i class="bi bi-sticky me-1"></i>Notities
                                </label>
                                <textarea asp-for="Notes" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Notes" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="d-flex gap-3 justify-content-end border-top pt-4 mt-4">
                        <a asp-action="Index" class="btn btn-lg btn-secondary">
                            <i class="bi bi-x-circle me-2"></i>Annuleren
                        </a>
                        <button type="submit" class="btn btn-lg btn-warning text-white">
                            <i class="bi bi-check-circle-fill me-2"></i>Wijzigingen Opslaan
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
