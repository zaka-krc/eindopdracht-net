@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer _localizer

@{
    ViewData["Title"] = _localizer["Title"];
}

<div class="container-fluid px-4 py-5">
    <!-- Header -->
    <div class="row mb-5">
        <div class="col-12">
            <h1 class="display-4 fw-bold text-primary">
                <i class="bi bi-speedometer2 me-3"></i>@_localizer["Dashboard Title"]
            </h1>
            <p class="lead text-muted">@_localizer["Welcome"]</p>
            <hr class="my-4">
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row mb-5 g-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 bg-primary bg-gradient text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 text-uppercase mb-2">@_localizer["Active Customers"]</h6>
                            <h2 class="mb-0 fw-bold">@ViewBag.ActiveCustomers</h2>
                        </div>
                        <i class="bi bi-people-fill fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 bg-success bg-gradient text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 text-uppercase mb-2">@_localizer["Products"]</h6>
                            <h2 class="mb-0 fw-bold">@ViewBag.TotalProducts</h2>
                        </div>
                        <i class="bi bi-box-seam-fill fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 bg-warning bg-gradient text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 text-uppercase mb-2">@_localizer["Deliveries"]</h6>
                            <h2 class="mb-0 fw-bold">@ViewBag.PendingDeliveries</h2>
                        </div>
                        <i class="bi bi-truck me-3 fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #ff8c42 0%, #ff6b35 100%);">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center text-white">
                        <div>
                            <h6 class="text-white-50 text-uppercase mb-2">@_localizer["Stock Alerts"]</h6>
                            <h2 class="mb-0 fw-bold">@ViewBag.StockAlerts</h2>
                        </div>
                        <i class="bi bi-exclamation-triangle-fill fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Module Navigatie -->
    <div class="row mb-4">
        <div class="col-12">
            <h3 class="fw-bold mb-4">
                <i class="bi bi-grid-3x3-gap-fill me-2"></i>@_localizer["Modules"]
            </h3>
        </div>
    </div>

    <div class="row g-4">

        <!-- Klanten Module -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm hover-lift">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-box bg-primary bg-opacity-10 rounded-3 p-3 me-3">
                            <i class="bi bi-people-fill fs-2 text-primary"></i>
                        </div>
                        <h4 class="card-title mb-0 fw-bold">@_localizer["Customers"]</h4>
                    </div>
                    <p class="card-text text-muted mb-4">
                        @_localizer["Customers Description"]
                    </p>
                    <a asp-controller="Customers" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-arrow-right-circle me-2"></i>@_localizer["Go to Customers"]
                    </a>
                </div>
            </div>
        </div>

        <!-- Producten Module -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm hover-lift">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-box bg-success bg-opacity-10 rounded-3 p-3 me-3">
                            <i class="bi bi-box-seam-fill fs-2 text-success"></i>
                        </div>
                        <h4 class="card-title mb-0 fw-bold">@_localizer["Products"]</h4>
                    </div>
                    <p class="card-text text-muted mb-4">
                        @_localizer["Products Description"]
                    </p>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-success">
                        <i class="bi bi-arrow-right-circle me-2"></i>@_localizer["Go to Products"]
                    </a>
                </div>
            </div>
        </div>

        <!-- Leveranciers Module -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm hover-lift">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-box bg-info bg-opacity-10 rounded-3 p-3 me-3">
                            <i class="bi bi-building-fill fs-2 text-info"></i>
                        </div>
                        <h4 class="card-title mb-0 fw-bold">@_localizer["Suppliers"]</h4>
                    </div>
                    <p class="card-text text-muted mb-4">
                        @_localizer["Suppliers Description"]
                    </p>
                    <a asp-controller="Suppliers" asp-action="Index" class="btn btn-info text-white">
                        <i class="bi bi-arrow-right-circle me-2"></i>@_localizer["Go to Suppliers"]
                    </a>
                </div>
            </div>
        </div>

        <!-- Leveringen Module -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm hover-lift">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-box bg-warning bg-opacity-10 rounded-3 p-3 me-3">
                            <i class="bi bi-truck fs-2 text-warning"></i>
                        </div>
                        <h4 class="card-title mb-0 fw-bold">@_localizer["Deliveries"]</h4>
                    </div>
                    <p class="card-text text-muted mb-4">
                        @_localizer["Deliveries Description"]
                    </p>
                    <a asp-controller="Deliveries" asp-action="Index" class="btn btn-warning text-white">
                        <i class="bi bi-arrow-right-circle me-2"></i>@_localizer["Go to Deliveries"]
                    </a>
                </div>
            </div>
        </div>

        <!-- Voertuigen Module -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm hover-lift">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-box bg-danger bg-opacity-10 rounded-3 p-3 me-3">
                            <i class="bi bi-truck-front-fill fs-2 text-danger"></i>
                        </div>
                        <h4 class="card-title mb-0 fw-bold">@_localizer["Vehicles"]</h4>
                    </div>
                    <p class="card-text text-muted mb-4">
                        @_localizer["Vehicles Description"]
                    </p>
                    <a asp-controller="Vehicles" asp-action="Index" class="btn btn-danger">
                        <i class="bi bi-arrow-right-circle me-2"></i>@_localizer["Go to Vehicles"]
                    </a>
                </div>
            </div>
        </div>

        <!-- Voorraad Aanpassingen Module -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm hover-lift">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-box bg-secondary bg-opacity-10 rounded-3 p-3 me-3">
                            <i class="bi bi-clipboard-check-fill fs-2 text-secondary"></i>
                        </div>
                        <h4 class="card-title mb-0 fw-bold">@_localizer["Stock Adjustments"]</h4>
                    </div>
                    <p class="card-text text-muted mb-4">
                        @_localizer["Stock Adjustments Description"]
                    </p>
                    <a asp-controller="StockAdjustments" asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-right-circle me-2"></i>@_localizer["Go to Adjustments"]
                    </a>
                </div>
            </div>
        </div>

        <!-- Stock Alerts Module -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm hover-lift">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-box rounded-3 p-3 me-3" style="background-color: rgba(255, 140, 66, 0.1);">
                            <i class="bi bi-exclamation-triangle-fill fs-2" style="color: #ff8c42;"></i>
                        </div>
                        <h4 class="card-title mb-0 fw-bold">@_localizer["Stock Alerts"]</h4>
                    </div>
                    <p class="card-text text-muted mb-4">
                        @_localizer["Stock Alerts Description"]
                    </p>
                    <a asp-controller="StockAlerts" asp-action="Index" class="btn" style="background-color: #ff8c42; color: white; border: 1px solid #ff8c42;">
                        <i class="bi bi-bell-fill me-2"></i>@_localizer["View Alerts"]
                    </a>
                </div>
            </div>
        </div>

        <!-- Levering Items Module -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm hover-lift">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-box bg-dark bg-opacity-10 rounded-3 p-3 me-3">
                            <i class="bi bi-list-check fs-2 text-dark"></i>
                        </div>
                        <h4 class="card-title mb-0 fw-bold">@_localizer["Delivery Items"]</h4>
                    </div>
                    <p class="card-text text-muted mb-4">
                        @_localizer["Delivery Items Description"]
                    </p>
                    <a asp-controller="DeliveryItems" asp-action="Index" class="btn btn-dark">
                        <i class="bi bi-arrow-right-circle me-2"></i>@_localizer["Go to Items"]
                    </a>
                </div>
            </div>
        </div>

    </div>

    <!-- Snelle Acties (voor Admin/Manager) -->
    @if (User.IsInRole("Administrator") || User.IsInRole("Manager"))
    {
        <div class="row mt-5">
            <div class="col-12">
                <h3 class="fw-bold mb-4">
                    <i class="bi bi-lightning-charge-fill me-2"></i>@_localizer["Quick Actions"]
                </h3>
            </div>
        </div>
        <div class="row g-3">
            <div class="col-md-3">
                <a asp-controller="Customers" asp-action="Create" class="btn btn-outline-primary w-100 py-3">
                    <i class="bi bi-plus-circle-fill me-2"></i>@_localizer["New Customer"]
                </a>
            </div>
            <div class="col-md-3">
                <a asp-controller="Products" asp-action="Create" class="btn btn-outline-success w-100 py-3">
                    <i class="bi bi-plus-circle-fill me-2"></i>@_localizer["New Product"]
                </a>
            </div>
            <div class="col-md-3">
                <a asp-controller="Deliveries" asp-action="Create" class="btn btn-outline-warning w-100 py-3">
                    <i class="bi bi-plus-circle-fill me-2"></i>@_localizer["New Delivery"]
                </a>
            </div>
            <div class="col-md-3">
                <a asp-controller="Suppliers" asp-action="Create" class="btn btn-outline-info w-100 py-3">
                    <i class="bi bi-plus-circle-fill me-2"></i>@_localizer["New Supplier"]
                </a>
            </div>
        </div>
    }

    @* Admin Panel Toegang - Alleen voor Administrator rol *@
    @if (User.IsInRole("Administrator"))
    {
        <div class="row mt-5">
            <div class="col-12">
                <div class="card border-danger shadow-lg">
                    <div class="card-header bg-danger text-white">
                        <h4 class="mb-0">
                            <i class="bi bi-shield-check me-2"></i>Administrator Panel
                        </h4>
                    </div>
                    <div class="card-body">
                        <p class="lead mb-4">Beheer gebruikers, rollen en systeem instellingen.</p>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-danger w-100 py-3">
                                    <i class="bi bi-speedometer2 me-2"></i>Admin Dashboard
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a asp-controller="Admin" asp-action="Users" class="btn btn-outline-danger w-100 py-3">
                                    <i class="bi bi-people me-2"></i>Gebruikersbeheer
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-danger w-100 py-3">
                                    <i class="bi bi-person-plus me-2"></i>Nieuwe Gebruiker
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
