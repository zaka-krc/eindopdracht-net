@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using SuntoryManagementSystem.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IViewLocalizer _localizer

@{
    // Haal huidige taal op
    string languageCode = "nl";
    string cookieCulture = Context.Request.Cookies[CookieRequestCultureProvider.DefaultCookieName];
    if (cookieCulture != null && cookieCulture.Length >= 4)
    {
        languageCode = cookieCulture.Substring(2, 2);
    }

    var thisPage = string.IsNullOrEmpty(Context.Request.Path) 
        ? "~/" 
        : $"~{Context.Request.Path.Value}{Context.Request.QueryString}";

    var languageNames = new Dictionary<string, string>
    {
        { "nl", "Nederlands" },
        { "en", "English" },
        { "fr", "Français" }
    };
}

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarUser" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-person-circle me-1"></i>@UserManager.GetUserName(User)!
        </a>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarUser">
            <li>
                <a class="dropdown-item" asp-controller="UserProfile" asp-action="Index">
                    <i class="bi bi-person me-2"></i>Mijn Profiel
                </a>
            </li>
            <li>
                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                    <i class="bi bi-gear me-2"></i>Account Instellingen
                </a>
            </li>
            <li>
                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">
                    <i class="bi bi-key me-2"></i>Wachtwoord Wijzigen
                </a>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <form id="logoutForm" class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="dropdown-item text-danger">
                        <i class="bi bi-box-arrow-right me-2"></i>Uitloggen
                    </button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">
            <i class="bi bi-person-plus me-1"></i>@_localizer["Register"]
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">
            <i class="bi bi-box-arrow-in-right me-1"></i>@_localizer["Login"]
        </a>
    </li>
}

    <!-- Language Switcher -->
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-dark" href="#" data-bs-toggle="dropdown">
            <i class="bi bi-globe"></i> @languageNames[languageCode]
        </a>
        <ul class="dropdown-menu dropdown-menu-end">
            @foreach (var lang in languageNames.Where(l => l.Key != languageCode))
            {
                <li>
                    <a class="dropdown-item" 
                       asp-controller="Languages" 
                       asp-action="ChangeLanguage"
                       asp-route-code="@lang.Key"
                       asp-route-returnUrl="@thisPage">
                        @lang.Value
                    </a>
                </li>
            }
        </ul>
    </li>
</ul>
