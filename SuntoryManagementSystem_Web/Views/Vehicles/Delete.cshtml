@model SuntoryManagementSystem.Models.Vehicle

@{
    ViewData["Title"] = "Voertuig Verwijderen";
}

<div class="container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header page-header-danger shadow-soft mb-4">
        <div class="container-fluid px-4">
            <h1 class="display-5 fw-bold mb-2">
                <i class="bi bi-trash-fill me-3"></i>Voertuig Verwijderen
            </h1>
            <p class="mb-0 opacity-75">Weet u zeker dat u dit voertuig wilt verwijderen?</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm border-left-danger">
                <div class="card-body p-4">
                    <div class="alert alert-warning alert-icon rounded-custom mb-4" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong>Waarschuwing!</strong> Deze actie kan niet ongedaan gemaakt worden.
                    </div>

                    <!-- Vehicle Information -->
                    <div class="mb-4">
                        <h4 class="fw-bold text-gradient mb-3">
                            <i class="bi bi-info-circle me-2"></i>Voertuig Gegevens
                        </h4>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label text-muted small">
                                    <i class="bi bi-key me-1"></i>Kenteken
                                </label>
                                <p class="fs-5 fw-bold text-danger">@Html.DisplayFor(model => model.LicensePlate)</p>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label text-muted small">
                                    <i class="bi bi-speedometer2 me-1"></i>Type
                                </label>
                                <p class="fs-5">@Html.DisplayFor(model => model.VehicleType)</p>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label text-muted small">
                                    <i class="bi bi-patch-plus me-1"></i>Merk
                                </label>
                                <p class="fs-5">@Html.DisplayFor(model => model.Brand)</p>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label text-muted small">
                                    <i class="bi bi-patch-plus me-1"></i>Model
                                </label>
                                <p class="fs-5">@Html.DisplayFor(model => model.Model)</p>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label text-muted small">
                                    <i class="bi bi-box-seam me-1"></i>Capaciteit (kg)
                                </label>
                                <p class="fs-5">@Html.DisplayFor(model => model.Capacity)</p>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label text-muted small">
                                    <i class="bi bi-wrench me-1"></i>Laatste Onderhoud
                                </label>
                                <p class="fs-5">@Html.DisplayFor(model => model.LastMaintenanceDate)</p>
                            </div>
                        </div>
                    </div>

                    <!-- Delete Form -->
                    <div class="border-top pt-4 mt-4">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="VehicleId" />
                            <div class="d-flex gap-3 justify-content-end">
                                <a asp-action="Index" class="btn btn-lg btn-secondary">
                                    <i class="bi bi-x-circle me-2"></i>Annuleren
                                </a>
                                <button type="submit" class="btn btn-lg btn-danger">
                                    <i class="bi bi-trash-fill me-2"></i>Verwijderen Bevestigen
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
