@model SuntoryManagementSystem.Models.Vehicle

@{
    ViewData["Title"] = "Nieuw Voertuig";
}

<div class="container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header page-header-danger shadow-soft mb-4">
        <div class="container-fluid px-4">
            <h1 class="display-5 fw-bold mb-2">
                <i class="bi bi-truck-plus me-3"></i>Nieuw Voertuig Toevoegen
            </h1>
            <p class="mb-0 opacity-75">Voeg een nieuw voertuig toe aan het systeem</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="form-modern">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-custom" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    </div>

                    <!-- Basic Information -->
                    <div class="mb-4">
                        <h4 class="fw-bold text-gradient mb-3">
                            <i class="bi bi-info-circle me-2"></i>Basis Informatie
                        </h4>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="LicensePlate" class="form-label">
                                    <i class="bi bi-key me-1"></i>Kenteken
                                </label>
                                <input asp-for="LicensePlate" class="form-control" placeholder="Bijv. AB-123-CD" />
                                <span asp-validation-for="LicensePlate" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="VehicleType" class="form-label">
                                    <i class="bi bi-speedometer2 me-1"></i>Type
                                </label>
                                <select asp-for="VehicleType" class="form-select">
                                    <option value="Van">Van</option>
                                    <option value="Truck">Truck</option>
                                    <option value="Lorry">Lorry</option>
                                </select>
                                <span asp-validation-for="VehicleType" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Vehicle Details -->
                    <div class="mb-4">
                        <h4 class="fw-bold text-gradient mb-3">
                            <i class="bi bi-car-front-fill me-2"></i>Voertuig Details
                        </h4>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Brand" class="form-label">
                                    <i class="bi bi-patch-plus me-1"></i>Merk
                                </label>
                                <input asp-for="Brand" class="form-control" placeholder="Bijv. Mercedes" />
                                <span asp-validation-for="Brand" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Model" class="form-label">
                                    <i class="bi bi-patch-plus me-1"></i>Model
                                </label>
                                <input asp-for="Model" class="form-control" placeholder="Bijv. Sprinter" />
                                <span asp-validation-for="Model" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Capacity" class="form-label">
                                    <i class="bi bi-box-seam me-1"></i>Capaciteit (kg)
                                </label>
                                <input asp-for="Capacity" type="number" class="form-control" placeholder="Bijv. 1500" />
                                <span asp-validation-for="Capacity" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LastMaintenanceDate" class="form-label">
                                    <i class="bi bi-wrench me-1"></i>Laatste Onderhoud
                                </label>
                                <input asp-for="LastMaintenanceDate" type="date" class="form-control" />
                                <span asp-validation-for="LastMaintenanceDate" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Availability & Notes -->
                    <div class="mb-4">
                        <h4 class="fw-bold text-gradient mb-3">
                            <i class="bi bi-clipboard-check me-2"></i>Aanvullende Informatie
                        </h4>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-check form-switch pt-2">
                                    <input class="form-check-input" type="checkbox" asp-for="IsAvailable" id="isAvailableCheck" />
                                    <label class="form-check-label" for="isAvailableCheck">
                                        <i class="bi bi-check-circle me-1"></i>Beschikbaar
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="CreatedDate" class="form-label">
                                    <i class="bi bi-calendar me-1"></i>Aanmaakdatum
                                </label>
                                <input asp-for="CreatedDate" type="date" class="form-control" />
                                <span asp-validation-for="CreatedDate" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Notes" class="form-label">
                                    <i class="bi bi-sticky me-1"></i>Opmerkingen
                                </label>
                                <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Eventuele opmerkingen over het voertuig..."></textarea>
                                <span asp-validation-for="Notes" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="d-flex gap-3 justify-content-end border-top pt-4 mt-4">
                        <a asp-action="Index" class="btn btn-lg btn-secondary">
                            <i class="bi bi-x-circle me-2"></i>Annuleren
                        </a>
                        <button type="submit" class="btn btn-lg btn-primary text-white">
                            <i class="bi bi-check-circle-fill me-2"></i>Voertuig Toevoegen
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
