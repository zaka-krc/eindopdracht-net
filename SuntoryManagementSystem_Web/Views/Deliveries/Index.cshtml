@model IEnumerable<SuntoryManagementSystem.Models.Delivery>
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer _localizer
@inject IHtmlLocalizer<SuntoryManagementSystem_Web.Services.SharedResource> _sharedLocalizer

@{
    ViewData["Title"] = _localizer["Title"];
}

<div class="container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header page-header-warning shadow-soft mb-4">
        <div class="container-fluid px-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-5 fw-bold mb-2">
                        <i class="bi bi-truck me-3"></i>@_localizer["Deliveries Management"]
                    </h1>
                    <p class="mb-0 opacity-75">@_localizer["Overview of all deliveries and their status"]</p>
                </div>
                <a asp-action="Create" class="btn btn-light btn-lg shadow-sm">
                    <i class="bi bi-plus-circle-fill me-2"></i>@_localizer["New Delivery"]
                </a>
            </div>
        </div>
    </div>

    <!-- Search Box -->
    <div class="search-box">
        <i class="bi bi-search"></i>
        <input type="text" id="searchInput" class="form-control form-control-lg shadow-sm" placeholder="@_localizer["Search placeholder"]">
    </div>

    <!-- Table Card -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-modern table-hover mb-0" id="deliveriesTable">
                    <thead>
                        <tr>
                            <th><i class="bi bi-tag me-2"></i>@_localizer["Reference"]</th>
                            <th><i class="bi bi-box-seam me-2"></i>@_localizer["Type"]</th>
                            <th><i class="bi bi-shop me-2"></i>@_localizer["Supplier"]</th>
                            <th><i class="bi bi-person me-2"></i>@_localizer["Customer"]</th>
                            <th><i class="bi bi-car-front me-2"></i>@_localizer["Vehicle"]</th>
                            <th><i class="bi bi-calendar-check me-2"></i>@_localizer["Expected"]</th>
                            <th><i class="bi bi-calendar-event me-2"></i>@_localizer["Delivered"]</th>
                            <th><i class="bi bi-currency-euro me-2"></i>@_localizer["Amount"]</th>
                            <th><i class="bi bi-circle-fill me-2"></i>@_sharedLocalizer["Status"]</th>
                            <th class="text-center"><i class="bi bi-gear me-2"></i>@_sharedLocalizer["Actions"]</th>
                        </tr>
                    </thead>
                    <tbody>
@foreach (var item in Model.Where(d => !d.IsDeleted)) {
                        <tr>
                            <td class="fw-bold text-primary">@Html.DisplayFor(modelItem => item.ReferenceNumber)</td>
                            <td><span class="badge bg-info badge-modern">@Html.DisplayFor(modelItem => item.DeliveryType)</span></td>
                            <td>@(item.Supplier?.SupplierName ?? "N/A")</td>
                            <td>@(item.Customer?.CustomerName ?? "N/A")</td>
                            <td>@(item.Vehicle?.LicensePlate ?? "N/A")</td>
                            <td>@item.ExpectedDeliveryDate.ToString("dd/MM/yyyy")</td>
                            <td>@(item.ActualDeliveryDate.HasValue ? item.ActualDeliveryDate.Value.ToString("dd/MM/yyyy") : "-")</td>
                            <td class="fw-bold">€ @Html.DisplayFor(modelItem => item.TotalAmount)</td>
                            <td>
                                @if (item.Status == "Delivered")
                                {
                                    <span class="badge bg-success badge-modern"><i class="bi bi-check-circle me-1"></i>@_localizer["Status Delivered"]</span>
                                }
                                else if (item.Status == "Pending")
                                {
                                    <span class="badge bg-warning badge-modern"><i class="bi bi-clock me-1"></i>@_localizer["Status Pending"]</span>
                                }
                                else if (item.Status == "InTransit")
                                {
                                    <span class="badge bg-primary badge-modern"><i class="bi bi-truck me-1"></i>@_localizer["Status InTransit"]</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary badge-modern">@item.Status</span>
                                }
                            </td>
                            <td>
                                <div class="action-buttons justify-content-center">
                                    <a asp-action="Details" asp-route-id="@item.DeliveryId" class="btn btn-sm btn-info btn-action text-white" title="@_sharedLocalizer["Details"]">
                                        <i class="bi bi-eye-fill"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.DeliveryId" class="btn btn-sm btn-warning btn-action text-white" title="@_sharedLocalizer["Edit"]">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.DeliveryId" class="btn btn-sm btn-danger btn-action" title="@_sharedLocalizer["Delete"]">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (!Model.Any(d => !d.IsDeleted))
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox display-1 text-muted"></i>
            <p class="lead text-muted mt-3">@_localizer["No deliveries found"]</p>
            <a asp-action="Create" class="btn btn-primary btn-lg mt-3">
                <i class="bi bi-plus-circle-fill me-2"></i>@_localizer["Add First Delivery"]
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.getElementById('searchInput').addEventListener('keyup', function() {
            var searchValue = this.value.toLowerCase();
            var tableRows = document.querySelectorAll('#deliveriesTable tbody tr');
            
            tableRows.forEach(function(row) {
                var text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchValue) ? '' : 'none';
            });
        });
    </script>
}
