@model SuntoryManagementSystem.Models.Delivery

@{
    ViewData["Title"] = "Levering Details";
}

<div class="container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header page-header-warning shadow-soft mb-4">
        <div class="container-fluid px-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-5 fw-bold mb-2">
                        <i class="bi bi-truck me-3"></i>Levering Details
                    </h1>
                    <p class="mb-0 opacity-75">Bekijk de details van de levering</p>
                </div>
                <a asp-action="Edit" asp-route-id="@Model?.DeliveryId" class="btn btn-warning btn-lg shadow-sm text-white">
                    <i class="bi bi-pencil-fill me-2"></i>Bewerken
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Basic Information -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold text-gradient">
                        <i class="bi bi-info-circle me-2"></i>Basis Informatie
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="bi bi-tag me-2"></i>Referentienummer
                                </label>
                                <p class="detail-value fw-bold text-primary">@Model?.ReferenceNumber</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="bi bi-box-seam me-2"></i>Levering Type
                                </label>
                                <p class="detail-value"><span class="badge bg-info badge-modern">@Model?.DeliveryType</span></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Party Information -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold text-gradient">
                        <i class="bi bi-people me-2"></i>Partijen
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="bi bi-shop me-2"></i>Leverancier
                                </label>
                                <p class="detail-value">@(Model?.Supplier?.SupplierName ?? "N/A")</p>
                                @if (Model?.Supplier != null)
                                {
                                    <small class="text-muted">@Model.Supplier.Address</small>
                                }
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="bi bi-person me-2"></i>Klant
                                </label>
                                <p class="detail-value">@(Model?.Customer?.CustomerName ?? "N/A")</p>
                                @if (Model?.Customer != null)
                                {
                                    <small class="text-muted">@Model.Customer.Address</small>
                                }
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="bi bi-car-front me-2"></i>Voertuig
                                </label>
                                <p class="detail-value">@(Model?.Vehicle?.LicensePlate ?? "N/A")</p>
                                @if (Model?.Vehicle != null)
                                {
                                    <small class="text-muted">@Model.Vehicle.Brand @Model.Vehicle.Model</small>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Delivery Details -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold text-gradient">
                        <i class="bi bi-calendar-check me-2"></i>Levering Details
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="bi bi-calendar me-2"></i>Verwachte Leverdatum
                                </label>
                                <p class="detail-value">@Model.ExpectedDeliveryDate.ToString("dd MMMM yyyy")</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="bi bi-calendar-event me-2"></i>Werkelijke Leverdatum
                                </label>
                                <p class="detail-value">@(Model.ActualDeliveryDate != null ? Model.ActualDeliveryDate.Value.ToString("dd MMMM yyyy") : "Nog niet geleverd")</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="bi bi-calendar-plus me-2"></i>Aangemaakt op
                                </label>
                                <p class="detail-value">@Model.CreatedDate.ToString("dd MMMM yyyy")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Notes -->
            @if (!string.IsNullOrWhiteSpace(Model?.Notes))
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 fw-bold text-gradient">
                            <i class="bi bi-sticky me-2"></i>Notities
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.Notes</p>
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-4">
            <!-- Status Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold text-gradient">
                        <i class="bi bi-clipboard-check me-2"></i>Status
                    </h5>
                </div>
                <div class="card-body">
                    <div class="detail-item mb-3">
                        <label class="detail-label">
                            <i class="bi bi-circle-fill me-2"></i>Levering Status
                        </label>
                        <p class="detail-value">
                            @if (Model?.Status == "Delivered")
                            {
                                <span class="badge bg-success badge-modern fs-6"><i class="bi bi-check-circle me-1"></i>Geleverd</span>
                            }
                            else if (Model?.Status == "Pending")
                            {
                                <span class="badge bg-warning badge-modern fs-6"><i class="bi bi-clock me-1"></i>In Afwachting</span>
                            }
                            else if (Model?.Status == "InTransit")
                            {
                                <span class="badge bg-primary badge-modern fs-6"><i class="bi bi-truck me-1"></i>Onderweg</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary badge-modern fs-6">@Model?.Status</span>
                            }
                        </p>
                    </div>
                    <div class="detail-item mb-3">
                        <label class="detail-label">
                            <i class="bi bi-check-square me-2"></i>Verwerkt
                        </label>
                        <p class="detail-value">
                            @if (Model?.IsProcessed == true)
                            {
                                <span class="badge bg-success badge-modern"><i class="bi bi-check-circle me-1"></i>Ja</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary badge-modern"><i class="bi bi-x-circle me-1"></i>Nee</span>
                            }
                        </p>
                    </div>
                    <div class="detail-item">
                        <label class="detail-label">
                            <i class="bi bi-currency-euro me-2"></i>Totaalbedrag
                        </label>
                        <p class="detail-value fs-4 fw-bold text-success">€ @Model?.TotalAmount.ToString("N2")</p>
                    </div>
                </div>
            </div>

            <!-- Actions Card -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold text-gradient">
                        <i class="bi bi-gear me-2"></i>Acties
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (!Model.IsProcessed && Model.Status != "Geannuleerd" && Model.Status != "Cancelled")
                        {
                        <form asp-action="Process" asp-route-id="@Model.DeliveryId" method="post" onsubmit="return confirm('Weet u zeker dat u deze levering wilt verwerken? Dit zal de voorraad aanpassen.');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success w-100">
                                <i class="bi bi-check-circle-fill me-2"></i>Verwerk Levering
                            </button>
                        </form>
                        }
                        else if (Model.IsProcessed)
                        {
                        <div class="alert alert-success mb-2">
                            <i class="bi bi-check-circle-fill me-2"></i>Levering is al verwerkt
                        </div>
                        }
                        <a asp-action="Edit" asp-route-id="@Model?.DeliveryId" class="btn btn-warning text-white">
                            <i class="bi bi-pencil-fill me-2"></i>Bewerken
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model?.DeliveryId" class="btn btn-danger">
                            <i class="bi bi-trash-fill me-2"></i>Verwijderen
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Terug naar Lijst
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
