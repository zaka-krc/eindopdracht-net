@model SuntoryManagementSystem.Models.Delivery

@{
    ViewData["Title"] = "Levering Verwijderen";
}

<div class="container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header page-header-warning shadow-soft mb-4">
        <div class="container-fluid px-4">
            <h1 class="display-5 fw-bold mb-2">
                <i class="bi bi-trash me-3"></i>Levering Verwijderen
            </h1>
            <p class="mb-0 opacity-75">Bevestig het verwijderen van deze levering</p>
        </div>
    </div>

    <!-- Warning Alert -->
    <div class="alert alert-danger alert-modern d-flex align-items-center mb-4" role="alert">
        <i class="bi bi-exclamation-triangle-fill fs-3 me-3"></i>
        <div>
            <h5 class="alert-heading mb-1">Let op!</h5>
            <p class="mb-0">Weet u zeker dat u deze levering wilt verwijderen? Deze actie kan niet ongedaan worden gemaakt.</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-light py-3">
                    <h5 class="mb-0 fw-bold text-gradient">
                        <i class="bi bi-info-circle me-2"></i>Levering Details
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="bi bi-tag me-2"></i>Referentienummer
                                </label>
                                <p class="detail-value fw-bold text-primary">@Model?.ReferenceNumber</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="bi bi-box-seam me-2"></i>Levering Type
                                </label>
                                <p class="detail-value"><span class="badge bg-info badge-modern">@Model?.DeliveryType</span></p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="bi bi-shop me-2"></i>Leverancier
                                </label>
                                <p class="detail-value">@(Model?.Supplier?.SupplierName ?? "N/A")</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="bi bi-person me-2"></i>Klant
                                </label>
                                <p class="detail-value">@(Model?.Customer?.CustomerName ?? "N/A")</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="bi bi-car-front me-2"></i>Voertuig
                                </label>
                                <p class="detail-value">@(Model?.Vehicle?.LicensePlate ?? "N/A")</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="bi bi-calendar me-2"></i>Verwachte Leverdatum
                                </label>
                                <p class="detail-value">@Model.ExpectedDeliveryDate.ToString("dd/MM/yyyy")</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="bi bi-calendar-event me-2"></i>Werkelijke Leverdatum
                                </label>
                                <p class="detail-value">@(Model.ActualDeliveryDate != null ? Model.ActualDeliveryDate.Value.ToString("dd/MM/yyyy") : "N/A")</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="bi bi-currency-euro me-2"></i>Totaalbedrag
                                </label>
                                <p class="detail-value fw-bold text-success">€ @Model?.TotalAmount.ToString("N2")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="bi bi-circle-fill me-2"></i>Status
                                </label>
                                <p class="detail-value">
                                    @if (Model?.Status == "Delivered")
                                    {
                                        <span class="badge bg-success badge-modern">Geleverd</span>
                                    }
                                    else if (Model?.Status == "Pending")
                                    {
                                        <span class="badge bg-warning badge-modern">In Afwachting</span>
                                    }
                                    else if (Model?.Status == "InTransit")
                                    {
                                        <span class="badge bg-primary badge-modern">Onderweg</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary badge-modern">@Model?.Status</span>
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="bi bi-check-square me-2"></i>Verwerkt
                                </label>
                                <p class="detail-value">
                                    @if (Model?.IsProcessed == true)
                                    {
                                        <span class="badge bg-success badge-modern">Ja</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary badge-modern">Nee</span>
                                    }
                                </p>
                            </div>
                        </div>
                        @if (!string.IsNullOrWhiteSpace(Model?.Notes))
                        {
                            <div class="col-12">
                                <div class="detail-item">
                                    <label class="detail-label">
                                        <i class="bi bi-sticky me-2"></i>Notities
                                    </label>
                                    <p class="detail-value">@Model.Notes</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Confirmation Form -->
            <form asp-action="Delete">
                <input type="hidden" asp-for="DeliveryId" />
                <div class="d-flex gap-3 justify-content-end">
                    <a asp-action="Index" class="btn btn-lg btn-secondary">
                        <i class="bi bi-x-circle me-2"></i>Annuleren
                    </a>
                    <button type="submit" class="btn btn-lg btn-danger">
                        <i class="bi bi-trash-fill me-2"></i>Levering Verwijderen
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
