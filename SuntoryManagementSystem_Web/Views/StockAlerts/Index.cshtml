@model IEnumerable<SuntoryManagementSystem.Models.StockAlert>

@{
    ViewData["Title"] = "Voorraadwaarschuwingen";
    var currentFilter = ViewBag.CurrentFilter as string ?? "active";
    var activeCount = ViewBag.ActiveCount as int? ?? 0;
    var resolvedCount = ViewBag.ResolvedCount as int? ?? 0;
}

<div class="container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header page-header-custom shadow-soft mb-4">
        <div class="container-fluid px-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-5 fw-bold mb-2">
                        <i class="bi bi-exclamation-triangle-fill me-3"></i>Voorraadwaarschuwingen
                    </h1>
                    <p class="mb-0 opacity-75">Automatisch gegenereerde waarschuwingen voor lage voorraad</p>
                </div>
                <div>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary btn-lg">
                        <i class="bi bi-box-seam me-2"></i>Ga naar Producten
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Tabs -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <ul class="nav nav-pills nav-fill">
                <li class="nav-item">
                    <a class="nav-link @(currentFilter == "active" ? "active" : "")" asp-action="Index" asp-route-filter="active">
                        <i class="bi bi-exclamation-circle-fill me-2"></i>Actieve Alerts
                        <span class="badge bg-danger ms-2">@activeCount</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentFilter == "resolved" ? "active" : "")" asp-action="Index" asp-route-filter="resolved">
                        <i class="bi bi-check-circle-fill me-2"></i>Opgeloste Alerts
                        <span class="badge bg-success ms-2">@resolvedCount</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentFilter == "all" ? "active" : "")" asp-action="Index" asp-route-filter="all">
                        <i class="bi bi-list-ul me-2"></i>Alle Alerts
                        <span class="badge bg-secondary ms-2">@(activeCount + resolvedCount)</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Info Alert -->
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <i class="bi bi-info-circle-fill me-2"></i>
        <strong>Automatisch beheer:</strong> Stock alerts worden automatisch aangemaakt wanneer de voorraad onder het minimum komt en worden opgelost wanneer de voorraad weer op peil is.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <!-- Search Box -->
    <div class="search-box">
        <i class="bi bi-search"></i>
        <input type="text" id="searchInput" class="form-control form-control-lg shadow-sm" placeholder="Zoek op productnaam, type of notities...">
    </div>

    <!-- Table Card -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-modern table-hover mb-0" id="alertsTable">
                    <thead>
                        <tr>
                            <th><i class="bi bi-box me-2"></i>Product</th>
                            <th><i class="bi bi-building me-2"></i>Leverancier</th>
                            <th><i class="bi bi-exclamation-triangle me-2"></i>Type</th>
                            <th><i class="bi bi-circle-fill me-2"></i>Status</th>
                            <th><i class="bi bi-calendar me-2"></i>Aangemaakt</th>
                            <th><i class="bi bi-calendar-check me-2"></i>Opgelost</th>
                            <th><i class="bi bi-sticky me-2"></i>Notities</th>
                            <th class="text-center"><i class="bi bi-gear me-2"></i>Acties</th>
                        </tr>
                    </thead>
                    <tbody>
@if (Model.Any())
{
    foreach (var item in Model)
    {
                        <tr>
                            <td>
                                <div class="fw-bold" style="color: #ff8c42;">
                                    @Html.DisplayFor(modelItem => item.Product.ProductName)
                                </div>
                                <small class="text-muted">SKU: @item.Product.SKU</small>
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Product.Supplier.SupplierName)</td>
                            <td>
                                @if (item.AlertType == "Out of Stock")
                                {
                                    <span class="badge bg-danger badge-modern">
                                        <i class="bi bi-x-circle me-1"></i>Uitverkocht
                                    </span>
                                }
                                else if (item.AlertType == "Critical")
                                {
                                    <span class="badge bg-warning badge-modern">
                                        <i class="bi bi-exclamation-triangle me-1"></i>Kritiek
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-info badge-modern">
                                        <i class="bi bi-info-circle me-1"></i>Laag
                                    </span>
                                }
                            </td>
                            <td>
                                @if (item.Status == "Active")
                                {
                                    <span class="badge bg-danger badge-modern">
                                        <i class="bi bi-exclamation-circle me-1"></i>Actief
                                    </span>
                                }
                                else if (item.Status == "Resolved")
                                {
                                    <span class="badge bg-success badge-modern">
                                        <i class="bi bi-check-circle me-1"></i>Opgelost
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary badge-modern">
                                        <i class="bi bi-dash-circle me-1"></i>@item.Status
                                    </span>
                                }
                            </td>
                            <td>
                                <div>@item.CreatedDate.ToString("dd-MM-yyyy")</div>
                                <small class="text-muted">@item.CreatedDate.ToString("HH:mm")</small>
                            </td>
                            <td>
                                @if (item.ResolvedDate.HasValue)
                                {
                                    <div>@item.ResolvedDate.Value.ToString("dd-MM-yyyy")</div>
                                    <small class="text-muted">@item.ResolvedDate.Value.ToString("HH:mm")</small>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Notes))
                                {
                                    <small>@item.Notes</small>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <div class="action-buttons justify-content-center">
                                    <a asp-action="Details" asp-route-id="@item.StockAlertId" 
                                       class="btn btn-sm btn-info btn-action text-white" 
                                       title="Bekijk Details">
                                        <i class="bi bi-eye-fill"></i>
                                    </a>
                                    <a asp-controller="Products" asp-action="Details" asp-route-id="@item.ProductId" 
                                       class="btn btn-sm btn-success btn-action text-white" 
                                       title="Bekijk Product">
                                        <i class="bi bi-box-seam-fill"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
    }
}
else
{
                        <tr>
                            <td colspan="8" class="text-center py-5">
                                <i class="bi bi-inbox display-1 text-muted d-block mb-3"></i>
                                <p class="lead text-muted">Geen waarschuwingen gevonden</p>
                            </td>
                        </tr>
}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('searchInput').addEventListener('keyup', function() {
            var searchValue = this.value.toLowerCase();
            var tableRows = document.querySelectorAll('#alertsTable tbody tr');
            
            tableRows.forEach(function(row) {
                var text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchValue) ? '' : 'none';
            });
        });
    </script>
}
