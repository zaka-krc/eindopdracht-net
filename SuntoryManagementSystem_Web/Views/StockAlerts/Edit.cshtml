@model SuntoryManagementSystem.Models.StockAlert

@{
    ViewData["Title"] = "Waarschuwing Bewerken";
}

<div class="container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header page-header-custom shadow-soft mb-4">
        <div class="container-fluid px-4">
            <h1 class="display-5 fw-bold mb-2">
                <i class="bi bi-pencil-square me-3"></i>Waarschuwing Bewerken
            </h1>
            <p class="mb-0 opacity-75">Wijzig de gegevens van deze waarschuwing</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="form-modern">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-custom" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    </div>
                    <input type="hidden" asp-for="StockAlertId" />

                    <!-- Basic Information -->
                    <div class="mb-4">
                        <h4 class="fw-bold text-gradient mb-3">
                            <i class="bi bi-info-circle me-2"></i>Basis Informatie
                        </h4>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="ProductId" class="form-label">
                                    <i class="bi bi-box me-1"></i>Product
                                </label>
                                <select asp-for="ProductId" class="form-select" asp-items="ViewBag.ProductId"></select>
                                <span asp-validation-for="ProductId" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="AlertType" class="form-label">
                                    <i class="bi bi-exclamation-triangle me-1"></i>Type Waarschuwing
                                </label>
                                <input asp-for="AlertType" class="form-control" />
                                <span asp-validation-for="AlertType" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Alert Details -->
                    <div class="mb-4">
                        <h4 class="fw-bold text-gradient mb-3">
                            <i class="bi bi-exclamation-lg me-2"></i>Waarschuwing Details
                        </h4>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Status" class="form-label">
                                    <i class="bi bi-circle-fill me-1"></i>Status
                                </label>
                                <select asp-for="Status" class="form-select">
                                    <option value="Active">Actief</option>
                                    <option value="Resolved">Opgelost</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="CreatedDate" class="form-label">
                                    <i class="bi bi-calendar me-1"></i>Aanmaakdatum
                                </label>
                                <input asp-for="CreatedDate" type="date" class="form-control" readonly />
                                <span asp-validation-for="CreatedDate" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ResolvedDate" class="form-label">
                                    <i class="bi bi-calendar-check me-1"></i>Opgelost Datum
                                </label>
                                <input asp-for="ResolvedDate" type="date" class="form-control" />
                                <span asp-validation-for="ResolvedDate" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Additional Information -->
                    <div class="mb-4">
                        <h4 class="fw-bold text-gradient mb-3">
                            <i class="bi bi-clipboard-check me-2"></i>Aanvullende Informatie
                        </h4>
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Notes" class="form-label">
                                    <i class="bi bi-sticky me-1"></i>Opmerkingen
                                </label>
                                <textarea asp-for="Notes" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Notes" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="d-flex gap-3 justify-content-end border-top pt-4 mt-4">
                        <a asp-action="Index" class="btn btn-lg btn-secondary">
                            <i class="bi bi-x-circle me-2"></i>Annuleren
                        </a>
                        <button type="submit" class="btn btn-lg btn-custom-orange">
                            <i class="bi bi-check-circle-fill me-2"></i>Wijzigingen Opslaan
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
