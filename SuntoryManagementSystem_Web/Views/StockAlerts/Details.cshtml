@model SuntoryManagementSystem.Models.StockAlert

@{
    ViewData["Title"] = "Waarschuwing Details";
}

<div class="container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header page-header-custom shadow-soft mb-4">
        <div class="container-fluid px-4">
            <h1 class="display-5 fw-bold mb-2">
                <i class="bi bi-eye-fill me-3"></i>Voorraadwaarschuwing Details
            </h1>
            <p class="mb-0 opacity-75">Gedetailleerde informatie over deze waarschuwing</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Alert Status Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h3 class="fw-bold mb-2" style="color: #ff8c42;">
                                @Model.Product.ProductName
                            </h3>
                            <p class="text-muted mb-2">
                                <i class="bi bi-building me-2"></i>@Model.Product.Supplier.SupplierName
                            </p>
                            <p class="text-muted mb-0">
                                <i class="bi bi-upc me-2"></i>SKU: @Model.Product.SKU
                            </p>
                        </div>
                        <div class="col-md-4 text-end">
                            @if (Model.Status == "Active")
                            {
                                <div class="alert alert-danger mb-0" role="alert">
                                    <i class="bi bi-exclamation-triangle-fill fs-1 d-block mb-2"></i>
                                    <strong>ACTIEVE WAARSCHUWING</strong>
                                </div>
                            }
                            else if (Model.Status == "Resolved")
                            {
                                <div class="alert alert-success mb-0" role="alert">
                                    <i class="bi bi-check-circle-fill fs-1 d-block mb-2"></i>
                                    <strong>OPGELOST</strong>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Details Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <!-- Alert Information -->
                    <div class="mb-4">
                        <h4 class="fw-bold text-gradient mb-3">
                            <i class="bi bi-exclamation-circle me-2"></i>Waarschuwing Informatie
                        </h4>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label text-muted small">
                                    <i class="bi bi-tag me-1"></i>Type
                                </label>
                                <div>
                                    @if (Model.AlertType == "Out of Stock")
                                    {
                                        <span class="badge bg-danger badge-modern badge-lg">
                                            <i class="bi bi-x-circle me-1"></i>Uitverkocht
                                        </span>
                                    }
                                    else if (Model.AlertType == "Critical")
                                    {
                                        <span class="badge bg-warning badge-modern badge-lg">
                                            <i class="bi bi-exclamation-triangle me-1"></i>Kritiek
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info badge-modern badge-lg">
                                            <i class="bi bi-info-circle me-1"></i>Laag
                                        </span>
                                    }
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label text-muted small">
                                    <i class="bi bi-circle-fill me-1"></i>Status
                                </label>
                                <div>
                                    @if (Model.Status == "Active")
                                    {
                                        <span class="badge bg-danger badge-modern badge-lg">
                                            <i class="bi bi-exclamation-circle me-1"></i>Actief
                                        </span>
                                    }
                                    else if (Model.Status == "Resolved")
                                    {
                                        <span class="badge bg-success badge-modern badge-lg">
                                            <i class="bi bi-check-circle me-1"></i>Opgelost
                                        </span>
                                    }
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label text-muted small">
                                    <i class="bi bi-calendar me-1"></i>Aangemaakt
                                </label>
                                <p class="fs-6 fw-bold mb-0">
                                    @Model.CreatedDate.ToString("dd-MM-yyyy HH:mm")
                                </p>
                            </div>
                            @if (Model.ResolvedDate.HasValue)
                            {
                            <div class="col-md-4">
                                <label class="form-label text-muted small">
                                    <i class="bi bi-calendar-check me-1"></i>Opgelost
                                </label>
                                <p class="fs-6 fw-bold mb-0">
                                    @Model.ResolvedDate.Value.ToString("dd-MM-yyyy HH:mm")
                                </p>
                            </div>
                            }
                        </div>
                    </div>

                    <!-- Notes -->
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                    <div class="mb-4">
                        <h4 class="fw-bold text-gradient mb-3">
                            <i class="bi bi-sticky me-2"></i>Notities
                        </h4>
                        <div class="alert alert-light border">
                            <p class="mb-0">@Model.Notes</p>
                        </div>
                    </div>
                    }

                    <!-- Product Stock Information -->
                    <div class="mb-4">
                        <h4 class="fw-bold text-gradient mb-3">
                            <i class="bi bi-box-seam me-2"></i>Huidige Voorraad Status
                        </h4>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label text-muted small">
                                    <i class="bi bi-boxes me-1"></i>Huidige Voorraad
                                </label>
                                <p class="fs-4 fw-bold mb-0" style="color: @(Model.Product.StockQuantity < Model.Product.MinimumStock ? "#dc3545" : "#198754")">
                                    @Model.Product.StockQuantity stuks
                                </p>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label text-muted small">
                                    <i class="bi bi-exclamation-triangle me-1"></i>Minimum Voorraad
                                </label>
                                <p class="fs-4 fw-bold mb-0">
                                    @Model.Product.MinimumStock stuks
                                </p>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label text-muted small">
                                    <i class="bi bi-graph-up me-1"></i>Status
                                </label>
                                <p class="mb-0">
                                    @if (Model.Product.StockQuantity >= Model.Product.MinimumStock)
                                    {
                                        <span class="badge bg-success badge-lg">
                                            <i class="bi bi-check-circle me-1"></i>Voldoende Voorraad
                                        </span>
                                    }
                                    else if (Model.Product.StockQuantity == 0)
                                    {
                                        <span class="badge bg-danger badge-lg">
                                            <i class="bi bi-x-circle me-1"></i>Uitverkocht
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning badge-lg">
                                            <i class="bi bi-exclamation-triangle me-1"></i>Onder Minimum
                                        </span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex gap-3 justify-content-end border-top pt-4 mt-4">
                        <a asp-action="Index" class="btn btn-lg btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Terug naar Lijst
                        </a>
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-lg btn-success">
                            <i class="bi bi-box-seam me-2"></i>Bekijk Product
                        </a>
                        @if (Model.Product.StockQuantity < Model.Product.MinimumStock)
                        {
                        <a asp-controller="Deliveries" asp-action="Create" asp-route-productId="@Model.ProductId" class="btn btn-lg btn-warning text-white">
                            <i class="bi bi-truck me-2"></i>Maak Levering
                        </a>
                        <a asp-controller="Products" asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-lg btn-primary">
                            <i class="bi bi-pencil-fill me-2"></i>Voorraad Bijwerken
                        </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
