@model SuntoryManagementSystem.Models.DeliveryItem

@{
    ViewData["Title"] = "Artikel Verwijderen";
}

<div class="container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header page-header-dark shadow-soft mb-4">
        <div class="container-fluid px-4">
            <h1 class="display-5 fw-bold mb-2">
                <i class="bi bi-trash-fill me-3"></i>Artikel Verwijderen
            </h1>
            <p class="mb-0 opacity-75">Weet u zeker dat u dit artikel wilt verwijderen?</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm border-left-dark">
                <div class="card-body p-4">
                    <div class="alert alert-warning alert-icon rounded-custom mb-4" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong>Waarschuwing!</strong> Deze actie kan niet ongedaan gemaakt worden.
                    </div>

                    <!-- Item Information -->
                    <div class="mb-4">
                        <h4 class="fw-bold text-gradient mb-3">
                            <i class="bi bi-info-circle me-2"></i>Artikel Gegevens
                        </h4>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label text-muted small">
                                    <i class="bi bi-truck me-1"></i>Leveringstype
                                </label>
                                <p class="fs-5 fw-bold text-dark">@Html.DisplayFor(model => model.Delivery.DeliveryType)</p>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label text-muted small">
                                    <i class="bi bi-box me-1"></i>Product
                                </label>
                                <p class="fs-5">@Html.DisplayFor(model => model.Product.ProductName)</p>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label text-muted small">
                                    <i class="bi bi-collection me-1"></i>Hoeveelheid
                                </label>
                                <p class="fs-5">@Html.DisplayFor(model => model.Quantity)</p>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label text-muted small">
                                    <i class="bi bi-cash-coin me-1"></i>Eenheidsprijs
                                </label>
                                <p class="fs-5">€ @Html.DisplayFor(model => model.UnitPrice)</p>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label text-muted small">
                                    <i class="bi bi-check-circle me-1"></i>Verwerkt
                                </label>
                                <p class="fs-5">
                                    @if (Model.IsProcessed)
                                    {
                                        <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Ja</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning"><i class="bi bi-clock me-1"></i>Nee</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Delete Form -->
                    <div class="border-top pt-4 mt-4">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="DeliveryItemId" />
                            <div class="d-flex gap-3 justify-content-end">
                                <a asp-action="Index" class="btn btn-lg btn-secondary">
                                    <i class="bi bi-x-circle me-2"></i>Annuleren
                                </a>
                                <button type="submit" class="btn btn-lg btn-danger">
                                    <i class="bi bi-trash-fill me-2"></i>Verwijderen Bevestigen
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
