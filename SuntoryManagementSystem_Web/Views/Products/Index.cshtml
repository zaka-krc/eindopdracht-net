@model IEnumerable<SuntoryManagementSystem.Models.Product>

@{
    ViewData["Title"] = "Producten";
}

<div class="container-fluid px-4">
    <div class="page-header page-header-success shadow-soft mb-4">
        <div class="container-fluid px-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-5 fw-bold mb-2">
                        <i class="bi bi-box-seam-fill me-3"></i>Producten Beheer
                    </h1>
                    <p class="mb-0 opacity-75">Overzicht van alle Suntory dranken en voorraad</p>
                </div>
                <a asp-action="Create" class="btn btn-light btn-lg shadow-sm">
                    <i class="bi bi-plus-circle-fill me-2"></i>Nieuw Product
                </a>
            </div>
        </div>
    </div>

    <div class="search-box">
        <i class="bi bi-search"></i>
        <input type="text" id="searchInput" class="form-control form-control-lg shadow-sm" placeholder="Zoek op productnaam, SKU of categorie...">
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-modern table-hover mb-0" id="productsTable">
                    <thead>
                        <tr>
                            <th><i class="bi bi-box me-2"></i>Product</th>
                            <th><i class="bi bi-upc me-2"></i>SKU</th>
                            <th><i class="bi bi-tag me-2"></i>Categorie</th>
                            <th><i class="bi bi-building me-2"></i>Leverancier</th>
                            <th><i class="bi bi-cash me-2"></i>Inkoop</th>
                            <th><i class="bi bi-currency-euro me-2"></i>Verkoop</th>
                            <th><i class="bi bi-box2 me-2"></i>Voorraad</th>
                            <th><i class="bi bi-exclamation-triangle me-2"></i>Min.</th>
                            <th><i class="bi bi-circle-fill me-2"></i>Status</th>
                            <th class="text-center"><i class="bi bi-gear me-2"></i>Acties</th>
                        </tr>
                    </thead>
                    <tbody>
@foreach (var item in Model.Where(p => !p.IsDeleted)) {
                        <tr class="@(item.StockQuantity <= item.MinimumStock ? "table-warning" : "")">
                            <td>
                                <div class="fw-bold text-success">@item.ProductName</div>
                                <small class="text-muted">@item.Description</small>
                            </td>
                            <td><code class="bg-light px-2 py-1 rounded">@item.SKU</code></td>
                            <td><span class="badge bg-info badge-modern">@item.Category</span></td>
                            <td>@item.Supplier?.SupplierName</td>
                            <td>€@item.PurchasePrice.ToString("0.00")</td>
                            <td class="fw-bold text-success">€@item.SellingPrice.ToString("0.00")</td>
                            <td>
                                @if (item.StockQuantity <= item.MinimumStock)
                                {
                                    <span class="badge bg-warning badge-modern">
                                        <i class="bi bi-exclamation-triangle me-1"></i>@item.StockQuantity
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-success badge-modern">@item.StockQuantity</span>
                                }
                            </td>
                            <td>@item.MinimumStock</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success badge-modern"><i class="bi bi-check-circle me-1"></i>Actief</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary badge-modern"><i class="bi bi-dash-circle me-1"></i>Inactief</span>
                                }
                            </td>
                            <td>
                                <div class="action-buttons justify-content-center">
                                    <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-sm btn-info btn-action text-white" title="Details">
                                        <i class="bi bi-eye-fill"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-warning btn-action text-white" title="Bewerken">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-sm btn-danger btn-action" title="Verwijderen">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (!Model.Any(p => !p.IsDeleted))
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox display-1 text-muted"></i>
            <p class="lead text-muted mt-3">Geen producten gevonden</p>
            <a asp-action="Create" class="btn btn-success btn-lg mt-3">
                <i class="bi bi-plus-circle-fill me-2"></i>Eerste Product Toevoegen
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.getElementById('searchInput').addEventListener('keyup', function() {
            var searchValue = this.value.toLowerCase();
            var tableRows = document.querySelectorAll('#productsTable tbody tr');
            
            tableRows.forEach(function(row) {
                var text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchValue) ? '' : 'none';
            });
        });
    </script>
}
