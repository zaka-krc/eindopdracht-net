@model SuntoryManagementSystem.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container-fluid px-4">
    <div class="page-header page-header-success shadow-soft mb-4">
        <div class="container-fluid px-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-5 fw-bold mb-2">
                        <i class="bi bi-box-seam-fill me-3"></i>@Model.ProductName
                    </h1>
                    <p class="mb-0 opacity-75">Volledige productinformatie</p>
                </div>
                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-light btn-lg">
                        <i class="bi bi-pencil-fill me-2"></i>Bewerken
                    </a>
                    <a asp-action="Index" class="btn btn-outline-light btn-lg">
                        <i class="bi bi-arrow-left me-2"></i>Terug
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-6">
            <div class="detail-card">
                <div class="detail-header">
                    <h4 class="mb-0"><i class="bi bi-info-circle-fill me-2"></i>Product Informatie</h4>
                </div>
                <div class="detail-body">
                    <div class="detail-row">
                        <div class="detail-label"><i class="bi bi-box me-2"></i>Productnaam</div>
                        <div class="detail-value fw-bold">@Model.ProductName</div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label"><i class="bi bi-upc me-2"></i>SKU</div>
                        <div class="detail-value"><code class="bg-light px-2 py-1 rounded">@Model.SKU</code></div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label"><i class="bi bi-tag me-2"></i>Categorie</div>
                        <div class="detail-value"><span class="badge bg-info badge-modern">@Model.Category</span></div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label"><i class="bi bi-journal-text me-2"></i>Beschrijving</div>
                        <div class="detail-value">@Model.Description</div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label"><i class="bi bi-building me-2"></i>Leverancier</div>
                        <div class="detail-value">@Model.Supplier?.SupplierName</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="detail-card">
                <div class="detail-header">
                    <h4 class="mb-0"><i class="bi bi-cash-stack me-2"></i>Prijs Informatie</h4>
                </div>
                <div class="detail-body">
                    <div class="detail-row">
                        <div class="detail-label"><i class="bi bi-cash me-2"></i>Inkoopprijs</div>
                        <div class="detail-value">€@Model.PurchasePrice.ToString("0.00")</div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label"><i class="bi bi-currency-euro me-2"></i>Verkoopprijs</div>
                        <div class="detail-value fw-bold text-success">€@Model.SellingPrice.ToString("0.00")</div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label"><i class="bi bi-percent me-2"></i>Winstmarge</div>
                        <div class="detail-value">@(Model.PurchasePrice > 0 ? ((Model.SellingPrice - Model.PurchasePrice) / Model.PurchasePrice * 100).ToString("0.0") : "0.0")%</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="detail-card">
                <div class="detail-header">
                    <h4 class="mb-0"><i class="bi bi-boxes me-2"></i>Voorraad Informatie</h4>
                </div>
                <div class="detail-body">
                    <div class="detail-row">
                        <div class="detail-label"><i class="bi bi-box2 me-2"></i>Huidige Voorraad</div>
                        <div class="detail-value">
                            @if (Model.StockQuantity <= Model.MinimumStock)
                            {
                                <span class="badge bg-warning badge-modern">
                                    <i class="bi bi-exclamation-triangle me-1"></i>@Model.StockQuantity stuks
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-success badge-modern">@Model.StockQuantity stuks</span>
                            }
                        </div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label"><i class="bi bi-exclamation-triangle me-2"></i>Minimum Voorraad</div>
                        <div class="detail-value">@Model.MinimumStock stuks</div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label"><i class="bi bi-circle-fill me-2"></i>Status</div>
                        <div class="detail-value">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success badge-modern"><i class="bi bi-check-circle me-1"></i>Actief</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary badge-modern"><i class="bi bi-dash-circle me-1"></i>Inactief</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="detail-card">
                <div class="detail-header">
                    <h4 class="mb-0"><i class="bi bi-clock-fill me-2"></i>Systeem Informatie</h4>
                </div>
                <div class="detail-body">
                    <div class="detail-row">
                        <div class="detail-label"><i class="bi bi-calendar me-2"></i>Aangemaakt op</div>
                        <div class="detail-value">@Model.CreatedDate.ToString("dd-MM-yyyy HH:mm")</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
