@model SuntoryManagementSystem.Models.Product

@{
    ViewData["Title"] = "Product Verwijderen";
}

<div class="container-fluid px-4">
    <div class="page-header page-header-danger shadow-soft mb-4">
        <div class="container-fluid px-4">
            <h1 class="display-5 fw-bold mb-2">
                <i class="bi bi-exclamation-triangle-fill me-3"></i>Product Verwijderen
            </h1>
            <p class="mb-0 opacity-75">Let op: deze actie kan niet ongedaan worden gemaakt</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-diamond-fill me-2"></i>Weet u zeker dat u dit product wilt verwijderen?</h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        <strong>Let op!</strong> Deze actie zal het product permanent verwijderen uit het systeem.
                    </div>

                    <div class="detail-card border-0">
                        <div class="detail-body">
                            <div class="detail-row">
                                <div class="detail-label"><i class="bi bi-box me-2"></i>Productnaam</div>
                                <div class="detail-value fw-bold">@Model.ProductName</div>
                            </div>
                            <div class="detail-row">
                                <div class="detail-label"><i class="bi bi-upc me-2"></i>SKU</div>
                                <div class="detail-value">@Model.SKU</div>
                            </div>
                            <div class="detail-row">
                                <div class="detail-label"><i class="bi bi-tag me-2"></i>Categorie</div>
                                <div class="detail-value">@Model.Category</div>
                            </div>
                            <div class="detail-row">
                                <div class="detail-label"><i class="bi bi-building me-2"></i>Leverancier</div>
                                <div class="detail-value">@Model.Supplier?.SupplierName</div>
                            </div>
                            <div class="detail-row">
                                <div class="detail-label"><i class="bi bi-box2 me-2"></i>Voorraad</div>
                                <div class="detail-value">@Model.StockQuantity stuks</div>
                            </div>
                            <div class="detail-row">
                                <div class="detail-label"><i class="bi bi-currency-euro me-2"></i>Verkoopprijs</div>
                                <div class="detail-value">€@Model.SellingPrice.ToString("0.00")</div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="ProductId" />
                        <div class="d-flex gap-3 justify-content-end border-top pt-4">
                            <a asp-action="Index" class="btn btn-lg btn-secondary">
                                <i class="bi bi-x-circle me-2"></i>Annuleren
                            </a>
                            <button type="submit" class="btn btn-lg btn-danger">
                                <i class="bi bi-trash-fill me-2"></i>Definitief Verwijderen
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
