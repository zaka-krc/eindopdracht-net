@model IEnumerable<SuntoryManagementSystem.Models.Customer>
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer _localizer
@inject IHtmlLocalizer<SuntoryManagementSystem_Web.Services.SharedResource> _sharedLocalizer

@{
    ViewData["Title"] = _localizer["Title"];
}

<div class="container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header page-header-primary shadow-soft mb-4">
        <div class="container-fluid px-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-5 fw-bold mb-2">
                        <i class="bi bi-people-fill me-3"></i>@_localizer["Customers Management"]
                    </h1>
                    <p class="mb-0 opacity-75">@_localizer["Overview of all customers and their data"]</p>
                </div>
                <a asp-action="Create" class="btn btn-light btn-lg shadow-sm">
                    <i class="bi bi-plus-circle-fill me-2"></i>@_localizer["New Customer"]
                </a>
            </div>
        </div>
    </div>

    <!-- Search Box -->
    <div class="search-box">
        <i class="bi bi-search"></i>
        <input type="text" id="searchInput" class="form-control form-control-lg shadow-sm" placeholder="@_localizer["Search placeholder"]">
    </div>

    <!-- Table Card -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-modern table-hover mb-0" id="customersTable">
                    <thead>
                        <tr>
                            <th><i class="bi bi-person-badge me-2"></i>@_localizer["Name"]</th>
                            <th><i class="bi bi-geo-alt me-2"></i>@_localizer["Address"]</th>
                            <th><i class="bi bi-mailbox me-2"></i>@_localizer["Postal Code"]</th>
                            <th><i class="bi bi-building me-2"></i>@_localizer["City"]</th>
                            <th><i class="bi bi-telephone me-2"></i>@_localizer["Phone"]</th>
                            <th><i class="bi bi-envelope me-2"></i>@_localizer["Email"]</th>
                            <th><i class="bi bi-person-vcard me-2"></i>@_localizer["Contact Person"]</th>
                            <th><i class="bi bi-tag me-2"></i>@_localizer["Type"]</th>
                            <th><i class="bi bi-circle-fill me-2"></i>@_sharedLocalizer["Status"]</th>
                            <th class="text-center"><i class="bi bi-gear me-2"></i>@_sharedLocalizer["Actions"]</th>
                        </tr>
                    </thead>
                    <tbody>
@foreach (var item in Model.Where(c => !c.IsDeleted)) {
                        <tr>
                            <td class="fw-bold text-primary">@Html.DisplayFor(modelItem => item.CustomerName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Address)</td>
                            <td>@Html.DisplayFor(modelItem => item.PostalCode)</td>
                            <td>@Html.DisplayFor(modelItem => item.City)</td>
                            <td><a href="tel:@item.PhoneNumber" class="text-decoration-none">@Html.DisplayFor(modelItem => item.PhoneNumber)</a></td>
                            <td><a href="mailto:@item.Email" class="text-decoration-none">@Html.DisplayFor(modelItem => item.Email)</a></td>
                            <td>@Html.DisplayFor(modelItem => item.ContactPerson)</td>
                            <td><span class="badge bg-info badge-modern">@Html.DisplayFor(modelItem => item.CustomerType)</span></td>
                            <td>
                                @if (item.Status == "Active")
                                {
                                    <span class="badge bg-success badge-modern"><i class="bi bi-check-circle me-1"></i>@_sharedLocalizer["Active"]</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary badge-modern"><i class="bi bi-dash-circle me-1"></i>@_sharedLocalizer["Inactive"]</span>
                                }
                            </td>
                            <td>
                                <div class="action-buttons justify-content-center">
                                    <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-sm btn-info btn-action text-white" title="@_sharedLocalizer["Details"]">
                                        <i class="bi bi-eye-fill"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-sm btn-warning btn-action text-white" title="@_sharedLocalizer["Edit"]">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-sm btn-danger btn-action" title="@_sharedLocalizer["Delete"]">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (!Model.Any(c => !c.IsDeleted))
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox display-1 text-muted"></i>
            <p class="lead text-muted mt-3">@_localizer["No customers found"]</p>
            <a asp-action="Create" class="btn btn-primary btn-lg mt-3">
                <i class="bi bi-plus-circle-fill me-2"></i>@_localizer["Add First Customer"]
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.getElementById('searchInput').addEventListener('keyup', function() {
            var searchValue = this.value.toLowerCase();
            var tableRows = document.querySelectorAll('#customersTable tbody tr');
            
            tableRows.forEach(function(row) {
                var text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchValue) ? '' : 'none';
            });
        });
    </script>
}
