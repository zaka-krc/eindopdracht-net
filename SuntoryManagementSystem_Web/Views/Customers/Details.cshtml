@model SuntoryManagementSystem.Models.Customer

@{
    ViewData["Title"] = "Klant Details";
}

<div class="container-fluid px-4">
    <div class="page-header page-header-primary shadow-soft mb-4">
        <div class="container-fluid px-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-5 fw-bold mb-2">
                        <i class="bi bi-person-badge-fill me-3"></i>@Model.CustomerName
                    </h1>
                    <p class="mb-0 opacity-75">Volledige klantinformatie</p>
                </div>
                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-light btn-lg">
                        <i class="bi bi-pencil-fill me-2"></i>Bewerken
                    </a>
                    <a asp-action="Index" class="btn btn-outline-light btn-lg">
                        <i class="bi bi-arrow-left me-2"></i>Terug
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-6">
            <div class="detail-card">
                <div class="detail-header">
                    <h4 class="mb-0"><i class="bi bi-info-circle-fill me-2"></i>Basis Informatie</h4>
                </div>
                <div class="detail-body">
                    <div class="detail-row">
                        <div class="detail-label"><i class="bi bi-person-badge me-2"></i>Klantnaam</div>
                        <div class="detail-value fw-bold">@Model.CustomerName</div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label"><i class="bi bi-tag me-2"></i>Type</div>
                        <div class="detail-value"><span class="badge bg-primary badge-modern">@Model.CustomerType</span></div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label"><i class="bi bi-circle-fill me-2"></i>Status</div>
                        <div class="detail-value">
                            @if (Model.Status == "Active")
                            {
                                <span class="badge bg-success badge-modern"><i class="bi bi-check-circle me-1"></i>Actief</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary badge-modern"><i class="bi bi-dash-circle me-1"></i>Inactief</span>
                            }
                        </div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label"><i class="bi bi-calendar me-2"></i>Aangemaakt op</div>
                        <div class="detail-value">@Model.CreatedDate.ToString("dd-MM-yyyy")</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="detail-card">
                <div class="detail-header">
                    <h4 class="mb-0"><i class="bi bi-person-vcard-fill me-2"></i>Contact Informatie</h4>
                </div>
                <div class="detail-body">
                    <div class="detail-row">
                        <div class="detail-label"><i class="bi bi-person me-2"></i>Contactpersoon</div>
                        <div class="detail-value">@Model.ContactPerson</div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label"><i class="bi bi-telephone me-2"></i>Telefoon</div>
                        <div class="detail-value"><a href="tel:@Model.PhoneNumber" class="text-decoration-none">@Model.PhoneNumber</a></div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label"><i class="bi bi-envelope me-2"></i>Email</div>
                        <div class="detail-value"><a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="detail-card">
                <div class="detail-header">
                    <h4 class="mb-0"><i class="bi bi-geo-alt-fill me-2"></i>Adres Gegevens</h4>
                </div>
                <div class="detail-body">
                    <div class="detail-row">
                        <div class="detail-label"><i class="bi bi-house me-2"></i>Adres</div>
                        <div class="detail-value">@Model.Address</div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label"><i class="bi bi-mailbox me-2"></i>Postcode</div>
                        <div class="detail-value">@Model.PostalCode</div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label"><i class="bi bi-building me-2"></i>Stad</div>
                        <div class="detail-value">@Model.City</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="detail-card">
                <div class="detail-header">
                    <h4 class="mb-0"><i class="bi bi-sticky-fill me-2"></i>Aanvullende Informatie</h4>
                </div>
                <div class="detail-body">
                    <div class="detail-row">
                        <div class="detail-label"><i class="bi bi-journal-text me-2"></i>Notities</div>
                        <div class="detail-value">@(string.IsNullOrEmpty(Model.Notes) ? "Geen notities" : Model.Notes)</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
