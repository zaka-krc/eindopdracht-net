@model SuntoryManagementSystem_Web.Controllers.ManageRolesViewModel
@{
    ViewData["Title"] = "Rollen Beheren";
}

<div class="container-fluid mt-4">
    <div class="row mb-3">
        <div class="col-12">
            <h2 class="mb-0">
                <i class="bi bi-shield-check"></i> Rollen Beheren
            </h2>
        </div>
    </div>

    <!-- User Info -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="alert alert-info">
                <strong>Gebruiker:</strong> @Model.UserName (@Model.UserEmail)
            </div>
        </div>
    </div>

    <!-- Role Management Form -->
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Selecteer Rollen</h5>
                </div>
                <div class="card-body">
                    <form asp-action="ManageRoles" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="UserName" />
                        <input type="hidden" asp-for="UserEmail" />

                        <div class="mb-3">
                            <p class="text-muted">Selecteer de rollen die u aan deze gebruiker wilt toewijzen:</p>
                            
                            @for (int i = 0; i < Model.AllRoles.Count; i++)
                            {
                                <input type="hidden" asp-for="AllRoles[i].RoleName" />
                                
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" 
                                           asp-for="AllRoles[i].IsSelected" 
                                           id="role_@i" />
                                    <label class="form-check-label" for="role_@i">
                                        <strong>@Model.AllRoles[i].RoleName</strong>
                                        @if (Model.AllRoles[i].RoleName == "Administrator")
                                        {
                                            <span class="badge bg-danger ms-2">Volledige toegang</span>
                                            <br />
                                            <small class="text-muted">Kan alle systeemfuncties beheren, inclusief gebruikersbeheer</small>
                                        }
                                        else if (Model.AllRoles[i].RoleName == "Manager")
                                        {
                                            <span class="badge bg-primary ms-2">Operationele toegang</span>
                                            <br />
                                            <small class="text-muted">Kan data toevoegen, wijzigen en verwijderen (geen gebruikersbeheer)</small>
                                        }
                                        else if (Model.AllRoles[i].RoleName == "Employee")
                                        {
                                            <span class="badge bg-secondary ms-2">Alleen-lezen toegang</span>
                                            <br />
                                            <small class="text-muted">Kan alleen data bekijken en rapporten genereren</small>
                                        }
                                    </label>
                                </div>
                            }
                        </div>

                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>Let op:</strong> Als u geen enkele rol selecteert, heeft de gebruiker alleen basis toegang tot het systeem.
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Users" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Annuleren
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Rollen Opslaan
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Role Descriptions -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Rol Beschrijvingen</h5>
                </div>
                <div class="card-body">
                    <h6 class="text-danger">
                        <i class="bi bi-shield-check"></i> Administrator
                    </h6>
                    <p class="small">
                        <strong>Volledige toegang:</strong>
                    </p>
                    <ul class="small">
                        <li>Alle CRUD operaties</li>
                        <li>Gebruikersbeheer</li>
                        <li>Rollen toewijzen</li>
                        <li>Wachtwoorden resetten</li>
                        <li>Rapporten genereren</li>
                    </ul>

                    <hr />

                    <h6 class="text-primary">
                        <i class="bi bi-person-badge"></i> Manager
                    </h6>
                    <p class="small">
                        <strong>Operationele toegang:</strong>
                    </p>
                    <ul class="small">
                        <li>Toevoegen, wijzigen, verwijderen</li>
                        <li>Leveringen verwerken</li>
                        <li>Voorraad beheren</li>
                        <li>Rapporten genereren</li>
                        <li>Geen gebruikersbeheer</li>
                    </ul>

                    <hr />

                    <h6 class="text-secondary">
                        <i class="bi bi-person"></i> Employee
                    </h6>
                    <p class="small">
                        <strong>Alleen-lezen toegang:</strong>
                    </p>
                    <ul class="small">
                        <li>Data bekijken</li>
                        <li>Rapporten genereren</li>
                        <li>Geen wijzigingen mogelijk</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
