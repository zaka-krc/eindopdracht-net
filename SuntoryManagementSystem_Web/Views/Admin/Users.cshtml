@model List<SuntoryManagementSystem_Web.Controllers.UserViewModel>
@{
    ViewData["Title"] = "Gebruikersbeheer";
}

<div class="container-fluid mt-4">
    <div class="row mb-3">
        <div class="col-12">
            <h2 class="mb-0">
                <i class="bi bi-people"></i> Gebruikersbeheer
            </h2>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filters & Actions -->
    <div class="row mb-3">
        <div class="col-md-6">
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-success">
                <i class="bi bi-person-plus"></i> Nieuwe Gebruiker Aanmaken
            </a>
            <a asp-action="Dashboard" class="btn btn-outline-primary">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a>
        </div>
        <div class="col-md-6 text-end">
            <span class="badge bg-primary">Totaal: @Model.Count gebruikers</span>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Status</th>
                            <th>Naam</th>
                            <th>Email</th>
                            <th>Afdeling</th>
                            <th>Functie</th>
                            <th>Rollen</th>
                            <th>Laatste Login</th>
                            <th class="text-center">Acties</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted">
                                    <i class="bi bi-inbox"></i> Geen gebruikers gevonden.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var userViewModel in Model)
                            {
                                var user = userViewModel.User;
                                <tr>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Actief
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle"></i> Inactief
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <strong>@user.FullName</strong>
                                    </td>
                                    <td>@user.Email</td>
                                    <td>@(user.Department ?? "-")</td>
                                    <td>@(user.JobTitle ?? "-")</td>
                                    <td>
                                        @if (userViewModel.Roles.Any())
                                        {
                                            @foreach (var role in userViewModel.Roles)
                                            {
                                                <span class="badge bg-@(role == "Administrator" ? "danger" : role == "Manager" ? "primary" : "secondary") me-1">
                                                    @role
                                                </span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Geen rol</span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.LastLoginDate.HasValue)
                                        {
                                            @user.LastLoginDate.Value.ToString("dd-MM-yyyy HH:mm")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Nog niet ingelogd</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="UserDetails" asp-route-id="@user.Id" class="btn btn-outline-info" title="Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="ManageRoles" asp-route-id="@user.Id" class="btn btn-outline-primary" title="Rollen Beheren">
                                                <i class="bi bi-shield-check"></i>
                                            </a>
                                            <form asp-action="ToggleActiveStatus" asp-route-id="@user.Id" method="post" style="display: inline;">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-@(user.IsActive ? "warning" : "success")" 
                                                        title="@(user.IsActive ? "Deactiveren" : "Activeren")"
                                                        onclick="return confirm('Weet u zeker dat u deze gebruiker wilt @(user.IsActive ? "deactiveren" : "activeren")?');">
                                                    <i class="bi bi-@(user.IsActive ? "pause-circle" : "play-circle")"></i>
                                                </button>
                                            </form>
                                            <form asp-action="ResetPassword" asp-route-id="@user.Id" method="post" style="display: inline;">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger" title="Reset Wachtwoord"
                                                        onclick="return confirm('Weet u zeker dat u het wachtwoord wilt resetten naar Reset@123?');">
                                                    <i class="bi bi-key"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
