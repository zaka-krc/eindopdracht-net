<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SuntoryManagementSystem_App.Pages.SettingsPage"
             Title="Instellingen"
             BackgroundColor="White">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <!-- Header -->
            <Label Text="Instellingen" 
                   FontSize="28" 
                   FontAttributes="Bold"
                   TextColor="#212121" />
            
            <!-- Connectivity Status -->
            <Border BackgroundColor="#F5F5F5" 
                    StrokeThickness="0"
                    Padding="15"
                    x:Name="ConnectivityBorder">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="10">
                    <Label Text="â—" 
                           FontSize="16"
                           x:Name="ConnectivityIndicator"
                           TextColor="Green"
                           VerticalOptions="Center" />
                    <Label x:Name="ConnectivityLabel"
                           Text="Online" 
                           FontSize="14"
                           VerticalOptions="Center"
                           TextColor="#212121" />
                </HorizontalStackLayout>
            </Border>
            
            <!-- Synchronisatie -->
            <Border BackgroundColor="#F5F5F5" 
                    StrokeThickness="0"
                    Padding="15">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="10">
                    <Label Text="Synchronisatie" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           TextColor="#212121" />
                    <Label x:Name="LastSyncLabel"
                           Text="Laatst gesynchroniseerd: Nooit" 
                           FontSize="14"
                           TextColor="Gray" />
                    <Label x:Name="SyncStatusLabel"
                           Text="" 
                           FontSize="14"
                           TextColor="Gray" />
                    <Button Text="Nu Synchroniseren" 
                            x:Name="SyncButton"
                            BackgroundColor="#28A745"
                            TextColor="White"
                            HeightRequest="45"
                            CornerRadius="8"
                            Clicked="OnSyncClicked" />
                    <ActivityIndicator x:Name="SyncIndicator"
                                      IsVisible="False"
                                      IsRunning="False"
                                      Color="#28A745"
                                      HeightRequest="30" />
                </VerticalStackLayout>
            </Border>
            
            <!-- Account Info / Login -->
            <Border BackgroundColor="#F5F5F5" 
                    StrokeThickness="0"
                    Padding="15">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="10">
                    <Label Text="Account" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           TextColor="#212121" />
                    
                    <!-- Logged In State -->
                    <VerticalStackLayout x:Name="LoggedInSection" IsVisible="False" Spacing="5">
                        <Label x:Name="UserNameLabel"
                               Text="Ingelogd als: -" 
                               FontSize="14"
                               TextColor="Gray" />
                        <Label x:Name="UserEmailLabel"
                               Text="Email: -" 
                               FontSize="14"
                               TextColor="Gray" />
                        <Button Text="Uitloggen" 
                                BackgroundColor="#DC3545"
                                TextColor="White"
                                HeightRequest="45"
                                CornerRadius="8"
                                Margin="0,10,0,0"
                                Clicked="OnLogoutClicked" />
                    </VerticalStackLayout>
                    
                    <!-- Login Form -->
                    <VerticalStackLayout x:Name="LoginSection" IsVisible="True" Spacing="10">
                        <Entry x:Name="EmailEntry"
                               Placeholder="E-mail"
                               Keyboard="Email"
                               BackgroundColor="White"
                               HeightRequest="45" />
                        <Entry x:Name="PasswordEntry"
                               Placeholder="Wachtwoord"
                               IsPassword="True"
                               BackgroundColor="White"
                               HeightRequest="45" />
                        <Button Text="Inloggen" 
                                BackgroundColor="#007BFF"
                                TextColor="White"
                                HeightRequest="45"
                                CornerRadius="8"
                                Clicked="OnLoginClicked" />
                        <Label x:Name="LoginErrorLabel"
                               Text=""
                               TextColor="Red"
                               FontSize="12"
                               IsVisible="False" />
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>
            
            <!-- Notifications -->
            <Border BackgroundColor="#F5F5F5" 
                    StrokeThickness="0"
                    Padding="15">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="10">
                    <Label Text="Notificaties" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           TextColor="#212121" />
                    <HorizontalStackLayout Spacing="10">
                        <Switch />
                        <Label Text="Push notificaties inschakelen" 
                               VerticalOptions="Center"
                               TextColor="Gray" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>
            
            <!-- App Info -->
            <Border BackgroundColor="#F5F5F5" 
                    StrokeThickness="0"
                    Padding="15">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="5">
                    <Label Text="App Informatie" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           TextColor="#212121" />
                    <Label Text="Versie: 1.0.0" 
                           FontSize="14"
                           TextColor="Gray" />
                    <Label Text="Suntory Management System" 
                           FontSize="14"
                           TextColor="Gray" />
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
