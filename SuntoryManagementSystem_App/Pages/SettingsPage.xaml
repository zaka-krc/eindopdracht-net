<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SuntoryManagementSystem_App.Pages.SettingsPage"
             Title="Instellingen"
             BackgroundColor="White">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <!-- Header -->
            <Label Text="Instellingen" 
                   FontSize="28" 
                   FontAttributes="Bold"
                   TextColor="#212121" />
            
            <!-- Account Info -->
            <Border BackgroundColor="#F5F5F5" 
                    StrokeThickness="0"
                    Padding="15">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="5">
                    <Label Text="Account Informatie" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           TextColor="#212121" />
                    <Label Text="Gebruiker: admin@suntory.com" 
                           FontSize="14"
                           TextColor="Gray" />
                    <Label Text="Rol: Administrator" 
                           FontSize="14"
                           TextColor="Gray" />
                </VerticalStackLayout>
            </Border>
            
            <!-- Taal -->
            <Border BackgroundColor="#F5F5F5" 
                    StrokeThickness="0"
                    Padding="15">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="10">
                    <Label Text="Taal" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           TextColor="#212121" />
                    <Picker Title="Selecteer taal">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Nederlands</x:String>
                                <x:String>English</x:String>
                                <x:String>Francais</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </VerticalStackLayout>
            </Border>
            
            <!-- Synchronisatie -->
            <Border BackgroundColor="#F5F5F5" 
                    StrokeThickness="0"
                    Padding="15">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="10">
                    <Label Text="Synchronisatie" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           TextColor="#212121" />
                    <HorizontalStackLayout Spacing="10">
                        <Switch />
                        <Label Text="Automatisch synchroniseren" 
                               VerticalOptions="Center"
                               TextColor="Gray" />
                    </HorizontalStackLayout>
                    <Button Text="Nu synchroniseren" 
                            BackgroundColor="#512BD4"
                            TextColor="White"
                            HeightRequest="45"
                            CornerRadius="10"
                            Margin="0,5,0,0" />
                </VerticalStackLayout>
            </Border>
            
            <!-- Notifications -->
            <Border BackgroundColor="#F5F5F5" 
                    StrokeThickness="0"
                    Padding="15">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="10">
                    <Label Text="Notificaties" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           TextColor="#212121" />
                    <HorizontalStackLayout Spacing="10">
                        <Switch />
                        <Label Text="Push notificaties inschakelen" 
                               VerticalOptions="Center"
                               TextColor="Gray" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>
            
            <!-- Acties -->
            <Button Text="Uitloggen" 
                    BackgroundColor="#DC3545"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="10"
                    Margin="0,20,0,0" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
