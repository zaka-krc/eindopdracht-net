<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SuntoryManagementSystem_App.ViewModels"
             xmlns:converters="clr-namespace:SuntoryManagementSystem_App.Converters"
             xmlns:models="clr-namespace:SuntoryManagementSystem.Models;assembly=SuntoryManagementSystem_Models"
             x:Class="SuntoryManagementSystem_App.Pages.DeliveryPage"
             x:DataType="viewmodels:DeliveryViewModel"
             Title="Leveringen"
             BackgroundColor="White">

    <ContentPage.Resources>
        <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        <converters:DeliveryStatusColorConverter x:Key="DeliveryStatusColorConverter" />
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*" Padding="20">
        
        <!-- HEADER SECTIE -->
        <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto" Margin="0,0,0,20">
            
            <!-- Zoekbalk -->
            <Border Grid.Column="0"
                    BackgroundColor="#F5F5F5"
                    Stroke="#E0E0E0"
                    StrokeThickness="1"
                    Padding="15,10"
                    Margin="0,0,10,0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8"/>
                </Border.StrokeShape>
                
                <Entry Placeholder="Zoek leveringen..."
                       Text="{Binding ZoekTekst}"
                       BackgroundColor="Transparent"
                       VerticalOptions="Center"/>
            </Border>
            
            <!-- Type Filter Picker -->
            <Picker Grid.Column="1"
                    SelectedItem="{Binding GeselecteerdType}"
                    BackgroundColor="#F5F5F5"
                    WidthRequest="120"
                    Margin="0,0,10,0">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Alle</x:String>
                        <x:String>Incoming</x:String>
                        <x:String>Outgoing</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            
            <!-- Status Filter Picker -->
            <Picker Grid.Column="2"
                    SelectedItem="{Binding GeselecteerdeStatus}"
                    BackgroundColor="#F5F5F5"
                    WidthRequest="120"
                    Margin="0,0,10,0">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Alle</x:String>
                        <x:String>Gepland</x:String>
                        <x:String>Delivered</x:String>
                        <x:String>Geannuleerd</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            
            <!-- Refresh Button -->
            <Button Grid.Column="3"
                    Text="Vernieuwen"
                    FontSize="14"
                    BackgroundColor="#512BD4"
                    TextColor="White"
                    Padding="15,10"
                    CornerRadius="8"
                    Margin="0,0,10,0"
                    Command="{Binding RefreshCommand}"/>
            
            <!-- Nieuwe Levering Button -->
            <Button Grid.Column="4"
                    Text="+ Nieuw"
                    FontSize="14"
                    BackgroundColor="#16A34A"
                    TextColor="White"
                    Padding="15,10"
                    CornerRadius="8"
                    Command="{Binding VoegLeveringToeCommand}"/>
        </Grid>

        <!-- LEVERINGEN LIJST -->
        <Border Grid.Row="1"
                BackgroundColor="#F5F5F5"
                Stroke="#E0E0E0"
                StrokeThickness="1">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="12"/>
            </Border.StrokeShape>
            
            <Grid>
                <!-- Loading Indicator -->
                <ActivityIndicator IsRunning="{Binding IsLoading}"
                                 IsVisible="{Binding IsLoading}"
                                 Color="#512BD4"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center"/>
                
                <!-- Leveringen CollectionView -->
                <CollectionView ItemsSource="{Binding GefilterdeLeveringen}"
                              IsVisible="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                              SelectionMode="None">
                    
                    <CollectionView.EmptyView>
                        <StackLayout Padding="40"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center">
                            <Label Text="Geen leveringen gevonden"
                                 FontSize="18"
                                 FontAttributes="Bold"
                                 HorizontalTextAlignment="Center"
                                 TextColor="Gray"/>
                            <Label Text="Voeg een levering toe of pas je zoekfilter aan"
                                 FontSize="14"
                                 HorizontalTextAlignment="Center"
                                 TextColor="Gray"
                                 Margin="0,5,0,0"/>
                        </StackLayout>
                    </CollectionView.EmptyView>
                    
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Delivery">
                            <SwipeView>
                                <SwipeView.RightItems>
                                    <SwipeItems>
                                        <SwipeItem Text="Bewerk"
                                                 BackgroundColor="#512BD4"
                                                 Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DeliveryViewModel}}, Path=BewerkLeveringCommand}"
                                                 CommandParameter="{Binding .}"/>
                                        <SwipeItem Text="Verwijder"
                                                 BackgroundColor="#DC2626"
                                                 Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DeliveryViewModel}}, Path=VerwijderLeveringCommand}"
                                                 CommandParameter="{Binding .}"/>
                                    </SwipeItems>
                                </SwipeView.RightItems>
                                
                                <!-- Delivery Card -->
                                <Border Margin="15,10"
                                      BackgroundColor="White"
                                      Stroke="#E0E0E0"
                                      StrokeThickness="1"
                                      Padding="15">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8"/>
                                    </Border.StrokeShape>
                                    
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DeliveryViewModel}}, Path=BekijkLeveringCommand}"
                                                            CommandParameter="{Binding .}"/>
                                    </Border.GestureRecognizers>
                                    
                                    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                        
                                        <!-- Header: Reference + Type -->
                                        <VerticalStackLayout Grid.Row="0" Grid.Column="0">
                                            <Label Text="{Binding ReferenceNumber}"
                                                 FontSize="18"
                                                 FontAttributes="Bold"
                                                 TextColor="#212121"/>
                                            <Label Text="{Binding DeliveryType}"
                                                 FontSize="12"
                                                 TextColor="Gray"
                                                 Margin="0,2,0,0"/>
                                        </VerticalStackLayout>
                                        
                                        <!-- Status Badge -->
                                        <Border Grid.Row="0" Grid.Column="1"
                                              Padding="10,5"
                                              VerticalOptions="Start"
                                              HorizontalOptions="End"
                                              BackgroundColor="{Binding Status, Converter={StaticResource DeliveryStatusColorConverter}}">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="12"/>
                                            </Border.StrokeShape>
                                            
                                            <Label Text="{Binding Status}"
                                                 FontSize="12"
                                                 FontAttributes="Bold"
                                                 TextColor="White"/>
                                        </Border>
                                        
                                        <!-- Details: Partner, Datum, Bedrag -->
                                        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                            ColumnDefinitions="*,*,*"
                                            Margin="0,10,0,0">
                                            
                                            <VerticalStackLayout Grid.Column="0">
                                                <Label Text="Partner"
                                                     FontSize="11"
                                                     TextColor="Gray"/>
                                                <Label Text="{Binding PartnerName}"
                                                     FontSize="14"
                                                     FontAttributes="Bold"
                                                     TextColor="#424242"/>
                                            </VerticalStackLayout>
                                            
                                            <VerticalStackLayout Grid.Column="1">
                                                <Label Text="Verwachte datum"
                                                     FontSize="11"
                                                     TextColor="Gray"/>
                                                <Label Text="{Binding ExpectedDeliveryDate, StringFormat='{0:dd-MM-yyyy}'}"
                                                     FontSize="14"
                                                     FontAttributes="Bold"
                                                     TextColor="#424242"/>
                                            </VerticalStackLayout>
                                            
                                            <VerticalStackLayout Grid.Column="2">
                                                <Label Text="Bedrag"
                                                     FontSize="11"
                                                     TextColor="Gray"/>
                                                <Label Text="{Binding TotalAmount, StringFormat='EUR {0:F2}'}"
                                                     FontSize="14"
                                                     FontAttributes="Bold"
                                                     TextColor="#16A34A"/>
                                            </VerticalStackLayout>
                                        </Grid>
                                        
                                        <!-- Action Buttons -->
                                        <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                                             Spacing="10"
                                                             Margin="0,10,0,0">
                                            <Button Text="Details"
                                                  FontSize="12"
                                                  Padding="10,5"
                                                  BackgroundColor="#512BD4"
                                                  TextColor="White"
                                                  CornerRadius="6"
                                                  Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DeliveryViewModel}}, Path=BewerkLeveringCommand}"
                                                  CommandParameter="{Binding .}"/>
                                            
                                            <!-- Verwerk button alleen tonen als nog niet verwerkt -->
                                            <Button Text="Verwerk"
                                                  FontSize="12"
                                                  Padding="10,5"
                                                  BackgroundColor="#16A34A"
                                                  TextColor="White"
                                                  CornerRadius="6"
                                                  IsVisible="{Binding IsProcessed, Converter={StaticResource InvertedBoolConverter}}"
                                                  Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DeliveryViewModel}}, Path=VerwerkLeveringCommand}"
                                                  CommandParameter="{Binding .}"/>
                                        </HorizontalStackLayout>
                                    </Grid>
                                </Border>
                            </SwipeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </Border>
    </Grid>
</ContentPage>
