<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SuntoryManagementSystem_App.ViewModels"
             xmlns:converters="clr-namespace:SuntoryManagementSystem_App.Converters"
             xmlns:models="clr-namespace:SuntoryManagementSystem.Models;assembly=SuntoryManagementSystem_Models"
             x:Class="SuntoryManagementSystem_App.Pages.ProductenPage"
             x:DataType="viewmodels:ProductenViewModel"
             Title="Producten"
             BackgroundColor="White">

    <ContentPage.Resources>
        <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        <converters:StockColorConverter x:Key="StockColorConverter" />
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*" Padding="20">
        
        <!-- HEADER SECTIE -->
        <VerticalStackLayout Grid.Row="0" Spacing="15">
            
            <!-- Zoekbalk -->
            <Border BackgroundColor="#F5F5F5"
                    StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                
                <SearchBar Placeholder="Zoek producten op naam, SKU, categorie..."
                           Text="{Binding ZoekTekst}"
                           BackgroundColor="Transparent"/>
            </Border>
            
            <!-- Action Buttons -->
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                <Button Grid.Column="0"
                        x:Name="BtnNieuw"
                        Text="+ Nieuw Product"
                        FontSize="16"
                        FontAttributes="Bold"
                        BackgroundColor="#28a745"
                        TextColor="White"
                        HeightRequest="50"
                        CornerRadius="10"
                        Clicked="OnNieuwClicked"/>
                
                <Button Grid.Column="1"
                        x:Name="BtnRefresh"
                        Text="Vernieuwen"
                        FontSize="14"
                        BackgroundColor="#512BD4"
                        TextColor="White"
                        WidthRequest="110"
                        HeightRequest="50"
                        CornerRadius="10"
                        Clicked="OnRefreshClicked"/>
            </Grid>
        </VerticalStackLayout>

        <!-- PRODUCTEN LIJST -->
        <Border Grid.Row="1"
                BackgroundColor="#F5F5F5"
                Stroke="#E0E0E0"
                StrokeThickness="1">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="12"/>
            </Border.StrokeShape>
            
            <Grid>
                <!-- Loading Indicator -->
                <ActivityIndicator IsRunning="{Binding IsLoading}"
                                 IsVisible="{Binding IsLoading}"
                                 Color="#512BD4"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center"/>
                
                <!-- Producten CollectionView -->
                <CollectionView ItemsSource="{Binding GefilterdProducten}"
                              IsVisible="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                              SelectionMode="None">
                    
                    <CollectionView.EmptyView>
                        <StackLayout Padding="40"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center">
                            <Label Text="Geen producten gevonden"
                                 FontSize="18"
                                 FontAttributes="Bold"
                                 HorizontalTextAlignment="Center"
                                 TextColor="Gray"/>
                            <Label Text="Voeg een product toe of pas je zoekfilter aan"
                                 FontSize="14"
                                 HorizontalTextAlignment="Center"
                                 TextColor="Gray"
                                 Margin="0,5,0,0"/>
                        </StackLayout>
                    </CollectionView.EmptyView>
                    
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Product">
                            <SwipeView>
                                <!-- Swipe Actions -->
                                <SwipeView.RightItems>
                                    <SwipeItems>
                                        <SwipeItem Text="Bewerk"
                                                 BackgroundColor="#ffc107"
                                                 Invoked="OnSwipeBewerkInvoked"/>
                                        
                                        <SwipeItem Text="Verwijder"
                                                 BackgroundColor="#dc3545"
                                                 Invoked="OnSwipeVerwijderInvoked"/>
                                    </SwipeItems>
                                </SwipeView.RightItems>
                                
                                <!-- Product Card -->
                                <Border Padding="15"
                                        Margin="0,5"
                                        BackgroundColor="#F8F9FA"
                                        StrokeThickness="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10"/>
                                    </Border.StrokeShape>
                                    
                                    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                        
                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnCardTapped"/>
                                        </Grid.GestureRecognizers>

                                        <!-- Product Naam & SKU -->
                                        <VerticalStackLayout Grid.Row="0" Grid.Column="0">
                                            <Label Text="{Binding ProductName}"
                                                 FontSize="18"
                                                 FontAttributes="Bold"
                                                 TextColor="#212121"/>
                                            <Label Text="{Binding SKU, StringFormat='SKU: {0}'}"
                                                 FontSize="12"
                                                 TextColor="Gray"
                                                 Margin="0,2,0,0"/>
                                        </VerticalStackLayout>
                                        
                                        <!-- Voorraad Badge -->
                                        <Border Grid.Row="0" Grid.Column="1"
                                              Padding="10,5"
                                              VerticalOptions="Start"
                                              HorizontalOptions="End"
                                              StrokeThickness="0">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="12"/>
                                            </Border.StrokeShape>
                                            <Border.BackgroundColor>
                                                <MultiBinding Converter="{StaticResource StockColorConverter}">
                                                    <Binding Path="StockQuantity"/>
                                                    <Binding Path="MinimumStock"/>
                                                </MultiBinding>
                                            </Border.BackgroundColor>
                                            
                                            <Label FontSize="14" FontAttributes="Bold" TextColor="White">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="{Binding StockQuantity}"/>
                                                        <Span Text=" stuks"/>
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                        </Border>
                                        
                                        <!-- Product Details -->
                                        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                            ColumnDefinitions="*,*,*"
                                            Margin="0,10,0,0">
                                            
                                            <VerticalStackLayout Grid.Column="0">
                                                <Label Text="Categorie"
                                                     FontSize="11"
                                                     TextColor="Gray"/>
                                                <Label Text="{Binding Category}"
                                                     FontSize="14"
                                                     FontAttributes="Bold"
                                                     TextColor="#424242"/>
                                            </VerticalStackLayout>
                                            
                                            <VerticalStackLayout Grid.Column="1">
                                                <Label Text="Verkoopprijs"
                                                     FontSize="11"
                                                     TextColor="Gray"/>
                                                <Label Text="{Binding SellingPrice, StringFormat='EUR {0:F2}'}"
                                                     FontSize="14"
                                                     FontAttributes="Bold"
                                                     TextColor="#16A34A"/>
                                            </VerticalStackLayout>
                                            
                                            <VerticalStackLayout Grid.Column="2">
                                                <Label Text="Min. voorraad"
                                                     FontSize="11"
                                                     TextColor="Gray"/>
                                                <Label Text="{Binding MinimumStock}"
                                                     FontSize="14"
                                                     FontAttributes="Bold"
                                                     TextColor="#424242"/>
                                            </VerticalStackLayout>
                                        </Grid>
                                        
                                        <!-- Leverancier & Actie Buttons -->
                                        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                            ColumnDefinitions="*,Auto,Auto"
                                            Margin="0,10,0,0">
                                            
                                            <HorizontalStackLayout Grid.Column="0" Spacing="5">
                                                <Label Text="Leverancier:"
                                                     FontSize="12"
                                                     TextColor="Gray"
                                                     VerticalOptions="Center"/>
                                                <Label Text="{Binding Supplier.SupplierName}"
                                                     FontSize="12"
                                                     FontAttributes="Bold"
                                                     TextColor="#424242"
                                                     VerticalOptions="Center"/>
                                            </HorizontalStackLayout>
                                            
                                            <!-- Edit Button -->
                                            <Button Grid.Column="1"
                                                  Text="Bewerken"
                                                  FontSize="14"
                                                  Padding="10,5"
                                                  BackgroundColor="#ffc107"
                                                  TextColor="White"
                                                  WidthRequest="95"
                                                  HeightRequest="45"
                                                  CornerRadius="8"
                                                  Margin="0,0,5,0"
                                                  Clicked="OnBewerkClicked"/>
                                            
                                            <!-- Delete Button -->
                                            <Button Grid.Column="2"
                                                  Text="Verwijder"
                                                  FontSize="14"
                                                  Padding="10,5"
                                                  BackgroundColor="#dc3545"
                                                  TextColor="White"
                                                  WidthRequest="95"
                                                  HeightRequest="45"
                                                  CornerRadius="8"
                                                  Clicked="OnVerwijderClicked"/>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </SwipeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </Border>
    </Grid>
</ContentPage>
