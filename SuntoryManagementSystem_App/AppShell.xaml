<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SuntoryManagementSystem_App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:SuntoryManagementSystem_App.Pages"
    Title="Suntory Management System"
    FlyoutBehavior="Disabled">

    <TabBar>
        <!-- Dashboard Tab -->
        <Tab Title="Dashboard">
            <ShellContent 
                ContentTemplate="{DataTemplate pages:MainPage}"
                Route="Dashboard" />
        </Tab>

        <!-- Product Tab -->
        <Tab Title="Producten">
            <ShellContent 
                ContentTemplate="{DataTemplate pages:ProductPage}"
                Route="Product" />
        </Tab>

        <!-- Delivery Tab -->
        <Tab Title="Leveringen">
            <ShellContent 
                ContentTemplate="{DataTemplate pages:DeliveryPage}"
                Route="Delivery" />
        </Tab>

        <!-- Customer Tab -->
        <Tab Title="Klanten">
            <ShellContent 
                ContentTemplate="{DataTemplate pages:CustomerPage}"
                Route="Customer" />
        </Tab>

        <!-- Instellingen Tab -->
        <Tab Title="Instellingen">
            <ShellContent 
                ContentTemplate="{DataTemplate pages:SettingsPage}"
                Route="Settings" />
        </Tab>
    </TabBar>

</Shell>
